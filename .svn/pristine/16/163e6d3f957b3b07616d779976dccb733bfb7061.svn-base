		{{/each}}
	</script>
    <script>
        $(".slt").on("change", function () {
            var region_id = $(".slt").find("option:checked").attr("data-id");
            if (region_id != '开户省') {
                $.ajax({
                    url: "index.php?s=/Api/IndexApi/region_list",
                    type: "post",
                    data: {
                        id: id,
                        region_id: region_id
                    },
                    success: function (res) {
                        $(".selt").html(template('shi', res));
                    }
                });
            }
        })
    </script>
