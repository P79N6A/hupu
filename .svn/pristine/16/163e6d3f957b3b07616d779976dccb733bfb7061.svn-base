    <script type="text/javascript">
        $("#getcode").on("click", function () {
            stopDefault();
            stopBubble();
            var phone = '{$phone}';
            console.log(phone)
            var type = 5;

            $.ajax({
                url: '/index.php?s=/Api/IndexApi/send_phone_code',
                type: 'post',
                data: {
                    "phone": phone,
                    "type": type
                },
                success: function (res) {
                    console.log(res)
                    if (res.status == 1) {
                        mui.alert("获取成功");
                    } else {
                        mui.alert(res.msg);
                    }
                }
            })
        });
        // 提交银行卡
        $("#submit").on("click", function () {
            stopDefault();
            stopBubble();

             var bankname = $("select[name=bankname]").val();

            // var province = $("select[name=province]").val() == '开户省' ? '' : $("select[name=province]").val();
            // var city = $("select[name=city]").val() == '开户市' ? '' : $("select[name=city]").val();

            var branchname = $("input[name=branchname]").val();//支行
            // var id = ;
            var name = $("input[name=uname]").val(); //姓名
            var code = $("input[name=code]").val();//验证码
            var banknumber = $("input[name=banknumber]").val();//银行卡号
            console.log(banknumber);

            var phone = '{$phone}';//手机号
            var user_id = '{$unionid}';

            if (!name) {
                mui.alert("请输入开户姓名！");
                return false;
            }
            if (!banknumber) {
                mui.alert("请输入银行卡号！");
                return false;
            }
            if (!code) {
                mui.alert("请输入验证码！");
                return false;
            }

            $.ajax({
                url: '/index.php?s=/Api/Profit/CreateUserBank',
                type: 'post',
                data: {
                    "unionid":user_id,
                    "name": name,
                    "banknumber": banknumber,
                    "branchname":branchname,
                    'mobileCode': code,
                    "id": obj_id,
                    "bankname":bankname
                },
                success: function (res) {
                    console.log(res);
                    if (res.ResultType == 0) {
                        mui.toast(res.Message);
                        setTimeout("top.location.href='/Home/User/usercenter'", 2000);
                    } else {
                        mui.toast(res.Message);
                    }
                }
            })

            // $.post("{:url('Home/User/banks')}", {
            //     "type": 1,
            //     "id": id,
            //     "name": name,
            //     "bankname": bankname,
            //     "branchname": branchname,
            //     "province": province,
            //     "city": city,
            //     "banknumber": banknumber,
            //     'code': code,
            //     'phone': phone
            // }, function (res) {
            //     if (res.status == 1) {
            //         mui.toast(res.msg);
            //         setTimeout("top.location.href='/Home/User/myInfo'", 2000);
            //     } else {
            //         mui.toast(res.msg);
            //     }
            // });
        });

        function stopDefault(e) {
            // 阻止默认浏览器动作(W3C)
            if (e && e.preventDefault) {
                e.preventDefault();
            } else {
                // IE中阻止函数器默认动作的方式
                window.event.returnValue = false;
            }
            return false;
        }

        function stopBubble(e) {
            // 如果提供了事件对象，则这是一个非IE浏览器
            if (e && e.stopPropagation) {
                // 因此它支持W3C的stopPropagation()方法
                e.stopPropagation();
            } else {
                // 否则，我们需要使用IE的方式来取消事件冒泡
                window.event.cancelBubble = true;
            }
        }
    </script>
    <script type="text/html" id="dq">
        <if condition="$banks.province neq ''">
