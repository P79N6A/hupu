<?php/** 撰写 */namespace app\home\controller;use app\common\controller\HomeBase;class Eleditor extends HomeBase{    /**     *撰写     */    public function index()    {    	$this->ids=$this->userInfo['id'];        return  $this->fetch();    }      public function uploads()    {    	if(substr($_SERVER['HTTP_HOST'],0,1) == 'w'){            $start_name = 'article';        }else{            $start_name = 'test';        }        $end_name = trim(strrchr($_FILES['pic']['name'], '.'),'.');        if($end_name == 'jpeg'){            $save_name = $start_name.'/'.date('Ymd').'/'.time().rand(1,9999).'.jpg';        }else{            $save_name = $start_name.'/'.date('Ymd').'/'.time().rand(1,9999).'.'.$end_name;        }                $Upload = new \Admin\Controller\UploadsController();        $img = $Upload->Uploads($save_name,$_FILES['pic']);        if($img){            $array_return['status']=1;            $array_return['url']=$img;        }else{        	$array_return['status']=0;            $array_return['msg']='服务器繁忙中，上传失败，请稍后再试';        }		echo json_encode($array_return);    }}