<script>

    layui.use(['form', 'element', 'table', 'jquery'], function () {
        var table = layui.table;
        var $ = layui.$ //重点处
            , form = layui.form
            , laydate = layui.laydate
            , layer = layui.layer;
        var urls = '/Admin/{$class}/getList';

        laydate.render({
            elem:'.date'
        });

        table.render({
            elem: '#listTable'
            , url: urls
            , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
            , toolbar: '#toolbar' //增加工具栏打印，筛选，导出
            , cols: [[
                {type: 'checkbox'}
                // , {field: 'id', title: 'ID', sort: true}
                , {field: 'nick_name', event: 'nick_name11', title: '用户名'}
                , {field: 'phone', templet: '#', title: '手机号'}
                , {field: 'money', templet: '#', title: '金额'}
                , {field: 'phone', templet: '#typeTpl', title: '提现类型'}
                , {field: 'phone', templet: '#infoTpl', title: '提现信息'}
                , {field: 'fee', templet: '#', title: '手续费'}
                , {field: 'true_money', templet: '#', title: '应付提现金额'}
                , {field: 'phone', templet: '#statusTpl', title: '状态'}
                // , {field: 'ip', templet: '#', title: '提现地址'}
                , {field: 'add_time', templet: '#dateFormat', title: '申请时间'}
                // , {field: 'admin_name', templet: '#', title: '操作人'}
                , {  templet: '#audit_time', title: '添加时间'}
                , {  templet: '#checkTpl', width:200, title: '操作'}
                // , {field: 'cover_img',  templet:'#image',  width: 100, height:100, align:'center',  title: '封面'}
                // , {title: '操作', align: 'center', toolbar: '#barDemo'}

            ]]
            ,where:{
                status:{$status}
            }
            , page: true
            , id: 'listReload'//会员列表重载

        });

        //监听提交
        form.on('submit(formDemo)', function (data) {
            table.reload('listReload', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
                , where: {
                    phone: data.field.phone
                    , province_id: data.field.province_id
                    , city_id: data.field.city_id
                    , nick_name: data.field.nick_name
                    , name: data.field.name
                    , money: data.field.money
                    , type: data.field.type
                    , start_at: data.field.start_at
                    , end_at: data.field.end_at
                }
            });
            return false;
        });

        form.on('select(pid)', function (data) {
            //执行重载
            table.reload('listReload', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
                , where: {
                    type: $("#pid").val()
                    // , type: $("#cid").val()
                }
            });
        });


        //监听行工具事件
        table.on('tool(listTable)', function (obj) {
            var data = obj.data //获得当前行数据
                , layEvent = obj.event; //获得 lay-event 对应的值

            // console.log(data.user_id);

            if (layEvent === 'nopass') {
                //这里一般是发送修改的Ajax请求
                $.ajax({
                    type: 'POST',
                    url: "./handle", // ajax请求路径
                    data: {
                        id: data.id,
                        status: value
                    },
                    dataType: 'json',
                    success: function (data) {
                        //调用弹窗显示信息
                        layer.msg(data['msg']);

                        if (data.code == 1) {

                            //同步更新表格和缓存对应的值
                            obj.update({
                                title: value
                            });

                        }

                    }
                });

            } else if (layEvent === 'transfer') {
                layer.confirm('真的删除行么', function (index) {

                    obj.del(); //删除对应行（tr）的DOM结构
                    //向服务端发送删除指令
                    del_member(data.id, './handle?');
                    layer.close(index);
                });
            } else if (layEvent === 'pass') {
                // layer.msg('编辑操作');
                location.href = './edits/id/' + obj.data.id;
            }


            if (layEvent === 'title') {

                layer.prompt({
                    formType: 2
                    , title: '修改title'
                    , value: data.title
                }, function (value, index) {
                    layer.close(index);
                    //这里一般是发送修改的Ajax请求
                    $.ajax({
                        type: 'POST',
                        url: "./edits", // ajax请求路径
                        data: {
                            id: data.id,
                            title: value
                        },
                        dataType: 'json',
                        success: function (data) {
                            //调用弹窗显示信息
                            layer.msg(data['msg']);

                            if (data.code == 1) {

                                //同步更新表格和缓存对应的值
                                obj.update({
                                    title: value
                                });

                            }

                        }
                    });

                    //同步更新表格和缓存对应的值
                    obj.update({
                        title: value
                    });
                });


            }

            if (layEvent === 'inte') {

                layer.prompt({
                    formType: 2
                    , title: '修改inte'
                    , value: data.inte
                }, function (value, index) {
                    layer.close(index);
                    //这里一般是发送修改的Ajax请求
                    $.ajax({
                        type: 'POST',
                        url: "./edits", // ajax请求路径
                        data: {
                            id: data.id,
                            inte: value
                        },
                        dataType: 'json',
                        success: function (data) {
                            //调用弹窗显示信息
                            layer.msg(data['msg']);

                            if (data.code == 1) {

                                //同步更新表格和缓存对应的值
                                obj.update({
                                    inte: value
                                });

                            }

                        }
                    });

                    //同步更新表格和缓存对应的值
                    obj.update({
                        inte: value
                    });
                });


            }


        });


        //工具栏事件
        table.on('toolbar(listTable)', function (obj) {
            var checkStatus = table.checkStatus(obj.config.id);

            switch (obj.event) {
                case 'getCheckData':

                    var data = checkStatus.data;
                    layer.alert(JSON.stringify(data));
                    break;
                case 'getCheckLength':
                    var data = checkStatus.data;
                    layer.msg('选中了：' + data.length + ' 个');
                    break;
                case 'isAll':
                    layer.msg(checkStatus.isAll ? '全选' : '未全选');
                    break;
                case 'delSelected':
                    var checkStatus = table.checkStatus('listReload')
                        , data = checkStatus.data;
                    var ids = "";
                    for (var i = 0; i < data.length; i++) {
                        var val = data[i].id;//注意修改字段  /*zzy*/
                        if (ids.length > 0) {
                            ids += ',';
                        }
                        ids += val;
                    }
                    if (data.length > 0) {
                        console.log(ids);
                        lunhui.deletes(ids, '{:url("delSelecteds")}');
                    } else {
                        layer.msg('请选中需要删除的数据', {icon: 0, time: 1500}, function (index) {
                            console.log(obj);
                            obj.del(); //删除对应行（tr）的DOM结构
                            layer.close(index);
                        });
                    }
                    break;
            }
        });


    });


</script>


