<extend name="./base" />

<block name="css_extend">
	<script src="__HOME_JS__/jquery.min.js"></script>
	<script src="__HOME_JS__/whjs/js/template-web.js"></script>
	<script src="__HOME_JS__/whjs/js/rem.js"></script>
	<style>
		html,
		body {
			height: 100%;
		}
		
		#div1 {
			width: 98%;
			margin: 0 auto;
			height: auto;
			position: relative;
		}
		
		#div1>img {
			width: 100%;
			height: auto;
		}
		
		#div2 {
			position: absolute;
			bottom: 5px;
			left: 5px;
			width: 150px;
			height: 145px;
			background: #bbbbbb;
		}
		
		#div2>img {
			width: 100%;
			height: 100%;
		}
		
		.tit {
			width: 98%;
			height: auto;
			margin: 0 auto;
		}
		
		.inp {
			width: 100%;
			height: 100px;
		}
		
		.btn {
			width: 100%;
			height: 60px;
			font-size: 0;
			position: fixed;
			bottom: 0;
			left: 0;
		}
		
		.return {
			width: 50%;
			height: 60px;
			background-color: #fff;
			color: #000;
			border: 0;
		}
		
		.generate {
			width: 50%;
			height: 60px;
			background-color: #2FB3D3;
			color: #fff;
			border: 0;
		}
		
		.blank {
			width: 100%;
			height: 60px;
		}
		
		#file0 {
			display: none;
		}
		
		.cover {
			width: 98%;
			margin: 0 auto;
			height: 200px;
			background-color: #fff;
			margin-bottom: 10px;
		}
		
		.cover-img {
			width: 49%;
			height: 200PX;
			float: left;
		}
		
		.cover-img>img {
			width: 100%;
			height: 100%;
		}
		
		.hint {
			width: 49%;
			height: 200px;
			float: left;
			text-align: center;
		}
		
		.hint>p {
			width: 100%;
			height: 50px;
			line-height: 50px;
			color: red;
		}
		
		textarea {
			margin-bottom: 56px;
		}
		
		#div1 {
			position: relative;
		}
		
		#div1 img:first-child {
			height: 31.25rem;
			width: 100%;
		}
		
		#div1 img:last-child {
			position: absolute;
			width: 3.75rem/* 150/40 */
			;
			height: 3.675rem/* 147/40 */
			;
			left: 50%;
			top: 66%;
			transform: translateY(100%);
			margin-left: -1.875rem;
		}
		
		.mui-popup.mui-popup-in {
			display: none;
			cursor: pointer;
		}
		
		.mui-popup-backdrop.mui-active {
			display: none;
		}


		@-webkit-keyframes change {
    0% {
        -webkit-transform: rotate(0deg);
    }
    50% {
        -webkit-transform: rotate(180deg);
    }
    100% {
        -webkit-transform: rotate(360deg);
    }
}

	.loading{
		width: 155px;
		height: 120px;
		position: fixed;
		top: 50%;
		left: 50%;
		margin-left: -77.5px;
		margin-top: -60px;
		text-align: center;
		display: none;
		background-color: rgba(0, 0, 0,0.5);
		border-radius: 5px;
		
	}

	.loading img{
		width: 40px;
		height: 40px;
		margin-top: 18px;
		animation: change 3s linear infinite;
	}

	.loading span{
		display: block;
		color: #fff;
		margin-top: 12px;
		font-size: 16px;
	}
	</style>
</block>

<block name="body">

	<body class="">
		<input type="hidden" id="myid" value="{$ids}" />
		<div id="div1">
			<!-- 海报图数据 -->

		</div>
		<div class="tit">
			<input class="inp" type="text" value="" placeholder="请输入分享标题" />
			<textarea class="txt" rows="5" cols="55" placeholder="请输入分享内容(30字以内)"></textarea>
		</div>
		<div class="btn">
			<a href="{:U('Home/Poster/index',array('cids'=>$tid))}">
				<button class="return">返回</button>
			</a>
            <button class="generate">保存海报</button>
		</div>

		<div class="mui-popup mui-popup-in">
			<div class="mui-popup-inner">
				<div class="mui-popup-title">提示</div>
				<div class="mui-popup-text">确认保存吗</div>
			</div>
			<div class="mui-popup-buttons">
				<span class="mui-popup-button">否</span>
				<span class="mui-popup-button mui-popup-button-bold" id="btn">是</span>
			</div>
		</div>
		<div class="mui-popup-backdrop mui-active"></div>

		<div class="loading">
			<img  src="__HOME_IMAGES__/loadad.gif" alt="">
			<span>正在生成中....</span>
		</div>

		<script type="text/html" id="hbimg">
			<img data-typeid="{{type_id}}" data-id="{{id}}" src="{{img}}" alt="">
			<img src="{{erweima}}" alt="">

		</script>

		<script src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js" type="text/javascript"></script>
		<script type="text/javascript">
            document.addEventListener('WeixinJSBridgeReady', function onBridgeReady() {
                // 通过下面这个API隐藏右上角按钮hideOptionMenu
                WeixinJSBridge.call('hideOptionMenu');
            });

		</script>

		<script>
			var val = $(".inp").val();
			var txt = $(".txt").val();
			var id = '{$id}';
			var poster_id = '{$ids}';
			$(function() {

				// console.log(typeof poster_id)

				var ids = $("#myid").val();
				$.ajax({
					//几个参数需要注意一下
					type: "POST", //方法类型
					dataType: "json", //预期服务器返回的数据类型
					url: "index.php?s=/Api/IndexApi/poster_img", //url 
					data: {
						id: id,
						poster_id: poster_id
					},
					success: function(res) {
						console.log(res)
						$("#div1").html(template("hbimg", res.AppendData))

					},
					error: function() {
						alert("服务器繁忙，请稍后再试！");
					}
				});
			})

			$('.generate').on('click', function() {

				$(".mui-popup.mui-popup-in").css("display", "block");
				$(".mui-popup-backdrop.mui-active").css("display", "block");
				$(".mui-popup-button").on('click', function() {
					$(".mui-popup.mui-popup-in").css("display", "none");
					$(".mui-popup-backdrop.mui-active").css("display", "none");
				})

				$("#btn").on('click', function() {
					var title = $('.inp').val();
					var content = $('textarea').val();
					var imgsrc = $('#div1').find("img:first-child").attr('src');
					var type_id = $('#div1').find("img:first-child").attr('data-id');
					var data_id = $('#div1').find("img:first-child").attr('data-typeid');
					var tid = '{$tid}';
					// console.log(type_id+'id')
					// console.log(data_id+'type_id')
					// if(!title) {
					// 	mui.toast("请填写分享标题");
					// 	return;
					// }
					// if(!content) {
					// 	mui.toast('请填写分享内容');
					// 	return;
					// }
					$.ajax({
						url: "index.php?s=/Api/IndexApi/synthesis_poster",
						type: "post",
						data: {
							id: id,
							title: title,
							content: content,
							img: imgsrc,
							type_id: data_id,
							is_gzh: 1 //公众号的标志
						},
						beforeSend:function(){
								$(".loading").show();
						},
						success: function(res) {
							// console.log(res)
							// alert(tid);  /cids/"+tid+"
									location.href = "{:U('Home/Nologin/share_img/id/" + res.New_id + "')}";
									$(".loading").hide();						
							// $("#sdf").click();
							// (tid);
						}

					})

				})

			})
		</script>
		<script src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js" type="text/javascript"></script>
		<script type="text/javascript">
			document.addEventListener('WeixinJSBridgeReady', function onBridgeReady() {
				// 通过下面这个API隐藏右上角按钮hideOptionMenu
				WeixinJSBridge.call('hideOptionMenu');
			});
		</script>
	</body>

</block>