<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="viewport" content="initial-scale=1, user-scalable=0, minimal-ui" charset="UTF-8">
    <meta name="x5-fullscreen" content="true">
    <script src="__HOME_JS__/whjs/js/jquery-1.8.3.min.js"></script>
    <script src="__HOME_JS__/whjs/js/newrem.js"></script>
    <link rel="stylesheet" href="__HOME_CSS__/wh/base.css">
    <title>软文推广</title>
    <style>
        .content {
            width: 100%;
            padding: 0 .15rem;
            box-sizing: border-box;

        }

        .list {
            width: 100%;
            margin-top: .115rem;
        }

        .list li {
            width: 100%;
            height: 1.055rem;
            border-radius: .05rem;
            box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.14);
            margin-bottom: .1rem;
        }

        .list li a {
            display: block;
            width: 100%;
            height: 100%;
            padding: .13rem .13rem;
            box-sizing: border-box;
        }

        .list li a .left_box {
            width: 70%;
            height: 100%;
        }

        .list li a .left_box h4 {
            font-size: .18rem;
            width: 2rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            margin-bottom: .05rem;
        }

        .list li a .left_box p {
            width: 2.2rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            color: #BABABA;
            font-size: .13rem;
            margin-bottom: .05rem;
        }

        .list li a .right_box {
            width: 30%;
            height: 100%;
        }

        .list li a .right_box img {
            width: 100%;
            height: 100%;
            border-radius: .05rem;
        }

        .list li a .left_box img {
            width: .1rem;
            height: .1rem;
            margin: 0 0.02rem;
        }

        .list li a .left_box span {
            font-size: .12rem;
            color: #BABABA;
        }

        .loading {
            width: 100%;
            height: .4rem;
            line-height: .4rem;
            box-sizing: border-box;
            text-align: center;
            position: relative;
            display: none;

        }

        .loading img {
            width: .3rem;
            height: .3rem;
            padding-top: .05rem;
            position: absolute;
            left: 39%;
        }

        .loading p {
            font-size: .16rem;
            height: 100%;
            line-height: .4rem;
            position: absolute;
            left: 50%;
        }
    </style>
</head>

<body>
    <div class="content">
        <ul class="list">
        </ul>
        <div class="loading">
            <img class="fl" src="__HOME_IMAGES__/loadad.gif" alt="">
            <p class="fl">加载中</p>
        </div>
    </div>
</body>

</html>
<script>
    $(function () {


        var id = '{$id}';

        $.ajax({
            url: "index.php?s=/Api/Article/get_article_list",
            type: "post",
            data: {
                unionid: id,
                page: 1
            },
            success: function (res) {
                console.log(res)
                var list = '';
                $.each(res.AppendData.list, function (k, v) {
                    list += '<li class="item">';
                    list +='<a class="clearfix" href="/index.php?s=/Home/Share/previewarticle/id/' + v.id + '&vid='+v.id+'">';
                    list += '<div class="fl left_box">';
                    list += '<h4>' + v.title + '</h4>';
                    list += ' <p>' + v.content + '</p>';
                    // list += '<div class="clearfix">';
                    // list += '<div class="fl">';
                    // list += '<img src="__HOME_IMAGES__/liulan2x.png" alt="">';
                    // list += '<span class="count">100011次</span>';
                    // list += '</div>';
                    // list += '<div class="fl">';
                    // list += '<img src="__HOME_IMAGES__/zizhu2x.png" alt="">';
                    // list += '<span class="count">100011次</span>';
                    // list += '</div>';
                    // list += '<div class="fl">';
                    // list += '<img src="__HOME_IMAGES__/inco_time@2x.png" alt="">';
                    // list += '<span class="count">100011次</span>';
                    // list += '</div>';
                    // list += '</div>';
                    list += '</div>';
                    list += '<div class="fr right_box">';
                    list += '<img src="' + v.thumb + '" alt="">';
                    list += '</div>';
                    list += '</a>';
                    list += '</li>';

                });
                $(".list").html(list)
            }

        })

        var page = 1;
        var scrollflage = true;
        $(window).scroll(function () {
            var viewheight = $(this).height();
            var contentheight = $(".list").get(0).scrollHeight;
            var scrollheight = $(this).scrollTop();
            if (!scrollflage) {
                return false;
            }
            if (contentheight - viewheight < scrollheight) {
                page += 1;
                scrollflage = false;
                console.log("到底了")
                console.log(page, "这是page")
                $.ajax({
                    url: "index.php?s=/Api/Article/get_article_list",
                    type: "post",
                    data: {
                        unionid: id,
                        page: page
                    },
                    beforeSend: function () {
                        $(".loading").show();
                    },
                    success: function (res) {
                        console.log(res)
                        scrollflage = true;
                        $(".loading").hide();

                        if (res.AppendData.length == 0) {
                            scrollflage = false;
                            console.log("没有数据啦");
                            $(".loading").html("没有更多数据了").show();
                        } else {
                            var list = '';
                            $.each(res.AppendData.list, function (k, v) {
                                list += '<li class="item">';
                                list += '<a class="clearfix" href="/index.php?s=/Home/Share/previewArticle123/id/' + v.id + '&vid='+v.id+'">';
                                list += '<div class="fl left_box">';
                                list += '<h4>' + v.title + '</h4>';
                                list += ' <p>' + v.content + '</p>';
                                // list += '<div class="clearfix">';
                                // list += '<div class="fl">';
                                // list +='<img src="__HOME_IMAGES__/liulan2x.png" alt="">';
                                // list += '<span class="count">100011次</span>';
                                // list += '</div>';
                                // list += '<div class="fl">';
                                // list += '<img src="__HOME_IMAGES__/zizhu2x.png" alt="">';
                                // list += '<span class="count">100011次</span>';
                                // list += '</div>';
                                // list += '<div class="fl">';
                                // list +='<img src="__HOME_IMAGES__/inco_time@2x.png" alt="">';
                                // list += '<span class="count">100011次</span>';
                                // list += '</div>';
                                // list += '</div>';
                                list += '</div>';
                                list += '<div class="fr right_box">';
                                list += '<img src="' + v.thumb + '" alt="">';
                                list += '</div>';
                                list += '</a>';
                                list += '</li>';

                            });
                            $(".list").append(list)

                        }


                    }
                })

            }
        })




    })
</script>