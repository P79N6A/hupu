<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/Public/Home/css/wh/base.css">
    <link rel="stylesheet" href="/Public/Home/css/wh/loading.css">
    <script src="/Public/Home/js/whjs/js/jquery-1.8.3.min.js"></script>
    <script src="/Public/Home/js/whjs/js/newrem.js"></script>
    <script src="__AGENCY__/js/vue/vue"></script>
    <script src="__AGENCY__/js/vue/mint-ui/index.js"></script>
    <link href="__AGENCY__/js/vue/mint-ui/style.css" rel="stylesheet">
    <script src="__AGENCY__/wap/public.js"></script>
    <title>密码重置</title>
    <style>


        body,html{
            height: 100%;
            width: 100%;
            background: -webkit-linear-gradient(#185c9d, #41cca2);
            overflow: hidden;
        }

   .logn_box{
        width: 3rem;
        position: fixed;
        top: 40%;
        left: 50%;
        color: #fff;
        margin-left: -1.5rem;
        margin-top: -1rem;
        text-align: center;
        overflow: hidden;
    }

     .logn_box p{
         font-size: .20rem;
         padding: .1rem 0;
         color: #000;
     }

      .logn_box .lg_in{
          width: 100%;
          height: .34rem;
          line-height: .34rem;
          position: relative;
          padding: .1rem 0;
      }

       .logn_box .lg_in input{
           display: block;
           width: 80%;
           height: 100%;
           margin: 0 auto;
           color: #fff;
           border-radius: .18rem;
           outline: none;
           border:0;
           background: rgba(0, 0, 0, 0.1);
           font-size: .14rem;
           text-indent: .5rem;

       }

         .logn_box .lg_in img{
             width: .2rem;
             height: .2rem;
             position: absolute;
             top: 50%;
             left: .45rem;
             margin-top: -.1rem;
         }

        ::-webkit-input-placeholder{/*Webkit browsers*/
             color:#fff;
             font-size: .14rem;
             
        }

        .logn_box #Logn{
            width: 82%;
            height: .4rem;
            line-height: .4rem;
            text-align: center;
            color: #fff;
            outline: none;
            border: 0;
            margin: 0 auto;
            border-radius: .2rem;
            margin-top: .2rem;
            /* background: -webkit-linear-gradient(#e7faff,rgba(65, 140, 204, 0.54)); */
            background: #41cca2;
            
        }

        .go{
            position: fixed;
            top:.1rem;
            left: .1rem;
        }

        .back{
            display: block;
            width: .8rem;
            height: .2rem;
            line-height: .2rem;
            position: relative;
            margin-top: .2rem;
            padding-left: .2rem;
            color: #41cca2 !important;
            text-indent: .14rem;
        }

         .back img{
             width: .2rem;
             height: .2rem;
             position: absolute;
             left: .1rem;
             margin-top: 0.01rem;
         }
        .mint-header{background-color: #1f6f9e;}
         
    </style>
</head>

<body class="hide">
   <div id="app">
       <mt-header title="重置密码">
           <router-link to="/" slot="left">
               <mt-button icon="back" @click="window.history.go(-1);">返回</mt-button>
           </router-link>
       </mt-header>

    <div class="logn_box">
        <p>密码重置</p>
        <div class="lg_in">
            <input type="text" placeholder="请输入密码" v-model="pwd">
            <img src="/Public/Home/images/wh/mima.png" alt="">
        </div>
        <div class="lg_in">
            <input type="password" placeholder="确认输入密码" v-model="pwd1">
            <img src="/Public/Home/images/wh/qrmm.png" alt="">
        </div>
        <button id="Logn" @click="login">完成</button>
    </div>
   </div>
    <div class="loading_box">
        <div id="colorfulPulse">
            <span class="item-1"></span>
            <span class="item-2"></span>
            <span class="item-3"></span>
            <span class="item-4"></span>
            <span class="item-5"></span>
            <span class="item-6"></span>
            <span class="item-7"></span>
        </div>
    </div>

</body>

</html>
<script>
    new Vue({
        el:"#app",
        data:{
            pwd1:'',
            pwd:'',
            isfalg:true
        },
        methods:{
            login:function () {
                var t=this;

                if(t.pwd==""){
                    if(t.pwd=="" || t.pwd.length<6 || t.pwd.length>12){
                        t.$toast('密码不能为空且长度需在6至12之间');
                        return;
                    }
                }
                if(t.pwd!=t.pwd1){
                    t.$toast('两次输入密码不一致');
                    return;
                }

                t.isfalg=false;
                $.ajax({
                    type: "POST",
                    url: "/index.php?s=/Api/AgencyWeb/changPwdByuuid",
                    data: {
                        pwd:t.pwd
                    },
                    dataType: 'json',
                    xhrFields: {
                        withCredentials: true
                    },
                    crossDomain: true,
                    success: function (res) {
                        if(res.ResultType==0){

                                t.$toast("登录成功");
                                $.cookie('uuid',"", { expires: 1 });
                                $.cookie('mydatetime',"", { expires: 1 });
                                window.location.href="/index.php?s=/Home/WapAgent/sign.html";

                            return;
                        }else{
                            t.$toast("修改失败");
                            t.isfalg=true;
                        }
                    },
                    error: function () {
                        //console.log(313)
                    }
                })
            }
        },
        mounted:function () {

            var t=this;
            if($.cookie("wapuuid")=="" || $.cookie("wapuuid")==null ){
                window.location.href="/index.php?s=/Home/WapAgent/sign"; return;
            }

        }
    })
</script>
<script>
    $(window).load(function () {
        $("body").removeClass("hide");
        $(".loading_box").show().delay(1000).fadeOut(1000);


    })
</script>