			//分享
			$(function() {
				var share_url = "{$share_url}";

				$.ajax({
					//几个参数需要注意一下
					type: "POST", //方法类型
					dataType: "json", //预期服务器返回的数据类型
					url: "index.php?s=/Api/WeShare/getSignPackage", //url
					data: {
						share_url: share_url
					},
