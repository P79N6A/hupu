								},
								cancel: function() {
									// 用户取消分享后执行的回调函数
								}
							});
							//分享给朋友
							wx.onMenuShareAppMessage({
								title: title, // 分享标题
								desc: desc, // 分享简介
								link: link, //分享出去后的链接，这里可以将链接设置为另一个页面。
								imgUrl: img_url, // 分享封面
								type: '', // 分享类型,music、video或link，不填默认为link
								dataUrl: '', // 如果type是music或video，则要提供数据链接，默认为空
								success: function() {
									// 用户确认分享后执行的回调函数
