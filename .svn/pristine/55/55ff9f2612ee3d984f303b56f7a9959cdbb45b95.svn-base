						var title = "洋小秘";
						var desc = "上海明鑫集团，是一家新商业战略投资公司， 是全球中小企业联盟(联合国工业发展组织咨商机构) 中国区重点合作企业。";
						var link = "{:'http://'.$_SERVER['HTTP_HOST'].U('Home/Uccns/yxm')}";
						var img_url = "http://wx.yxm360.com/Public/Home/images/mplogo.jpg";

						wx.config({
							debug: false, // 开启调试模式,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。移动端会通过弹窗来提示相关信息。如果分享信息配置不正确的话，可以开了看对应报错信息
							appId: result.AppendData.appId,
							timestamp: result.AppendData.timestamp,
							nonceStr: result.AppendData.nonceStr,
							signature: result.AppendData.signature,
							jsApiList: [ //需要使用的JS接口列表,分享默认这几个，如果有其他的功能比如图片上传之类的，需要添加对应api进来
								'checkJsApi',
								'onMenuShareTimeline', //
								'onMenuShareAppMessage',
								'onMenuShareQQ',
								'onMenuShareWeibo',
								'getLocation'
							]
						});
						wx.ready(function() {
							//分享到朋友圈
							wx.onMenuShareTimeline({
								title: title, // 分享标题
								desc: desc, // 分享简介
								link: link, //分享出去后的链接，这里可以将链接设置为另一个页面。
								imgUrl: img_url, // 分享封面
								success: function() {
									// 用户确认分享后执行的回调函数
