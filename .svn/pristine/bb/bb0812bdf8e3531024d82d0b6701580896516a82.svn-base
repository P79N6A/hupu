        $param = input('city_id');
        if ('' != $param) {
            $condition[] = ['A.city_id', '=', $param];
        }
        $param = input('province_id');
        if ('' != $param) {
            $condition[] = ['A.province_id', '=', $param];
        }

        $start_at = input('start_at');
        $end_at = input('end_at');
