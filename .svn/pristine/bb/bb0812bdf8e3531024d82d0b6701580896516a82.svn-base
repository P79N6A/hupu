            }
            if ($start_at) {
                $condition[] = array('H.add_time','>=', $start_at);
            }
        }


        $model = $this->getModelClass();
        $data = $model
            ->alias('A')
            ->join("users_fans H ", " H.user_id=A.id", "left")
            ->join("member G ", "G.id=A.member_id", "left")
            ->join("vip_group E ", "E.id=A.vip_group_id", "left")
