    public function del_search_img(){
        if(I('get.id')){
            $res = M('search_img')->where(array('id'=>I('get.id')))->delete();
            if($res){
                $this->success('删除成功');
            }else{
                $this->error('删除失败');
            }
        }else{
            $this->error('删除失败');
        }
    }




