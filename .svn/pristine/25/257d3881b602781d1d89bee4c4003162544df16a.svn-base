{include file="Public/header"}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>添加</h5>
                  {include file="Public/toolbar"}
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal" name="userAdd" id="edit" method="post" action="{:url('add')}">


                        <div class="form-group">
                            <label class="col-sm-3 control-label">贺词：</label>
                            <div class="input-group col-sm-4">
                                <textarea name="content" placeholder="请输入内容" class="layui-textarea"></textarea>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">所属模版：</label>
                            <div class="input-group col-sm-4">

                                <select class="form-control m-b chosen-select" name="gcard_id">
                                    <option value="">==请选择==</option>
                                    {foreach name="lists" item="vo"}
                                    <option value="{$vo.id}"> {$vo.title}</option>
                                    {/foreach}

                                </select>
                            </div>

                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-3">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> 保存</button>&nbsp;&nbsp;&nbsp;
                                <a class="btn btn-danger" href="javascript:history.go(-1);">
                                    <i class="fa fa-close"></i>
                                    返回</a>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


{include file="Public/footer"}


<script type="text/javascript">

    $(function () {
        $('#edit').ajaxForm({
            beforeSubmit: checkForm,
            success: complete,
            dataType: 'json'
        });

        function checkForm() {
            // if( '' == $.trim($('#title').val())){
            //     layer.msg('请输入宜居人数',{icon:2,time:1500,shade: 0.1}, function(index){
            //         layer.close(index);
            //     });
            //     return false;
            // }
        }


        function complete(data) {
            if (data.code == 1) {
                layer.msg(data.msg, {icon: 6, time: 1500, shade: 0.1}, function (index) {
                    window.location.href = "{:url('index')}";
                });
            } else {
                layer.msg(data.msg, {icon: 5, time: 1500, shade: 0.1});
                return false;
            }
        }

    });

</script>


</body>
</html>
