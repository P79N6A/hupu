		<style>
			* {
				margin: 0;
				padding: 0;
			}
			
			body {
				width: 100%;
				height: 100%;
				background: #f2f2f2;
			}
			
			.top {
				width: 100%;
				height: 2rem;
				display: flex;
				color: #666;
				font-size: 0.65rem;
				margin: 0 auto;
				position: fixed;
				top:0;
				left:0;
				background: #fff;
			}
			
			.t_left {
				width: 22%;
				height: 100%;
				line-height: 2rem;
				font-weight: 600;
				text-align: center;
			}
			
			.t_left>a{
				display: block;
				width: 100%;
				height: 100%;
				color:#666;
			}
			
			.t_cen {
				width: 63.5%;
				height: 1.15rem;
				margin: 0.425rem 0;
				background: #F6F6F6;
				overflow: hidden;
			}
			
			.t_right {
				width: 14.5%;
				height: 100%;
				line-height: 2rem;
				text-align: center;
			}
			
			.sort_box{
				width: 100%;
				margin-top: 2rem;
				margin-bottom: 2.9rem;
			}
			
			.c_left {
				display: block;
				width: 12%;
				height: 100%;
				text-align: right;
				float: left;
				line-height: 1.15rem;
			}
			
			.c_left>img {
				width: 0.8rem;
				height: 0.8rem;
				margin: 0.175rem 0;
			}
			
			.c_right {
				display: block;
				width: 67%;
				height: 100%;
				float: left;
				margin-left: 5%;
			}
			
			.c_right>input {
				width: 100%;
				height: 1.15rem;
				border: none;
				outline: none;
				background: none;
				line-height: 1.15rem;
				font-size: 0.6rem;
				color: #333;
			}
			
			input::-webkit-input-placeholder {
				/* placeholder颜色  */
				color: #C5C5C5;
				/* placeholder字体大小  */
				font-size: 0.6rem;
			}
			
			.sort_letter {
				width: 90%;
				padding-left: 0rem;
				height: 1.5rem;
				line-height: 1.5rem;
				color: #666;
				font-size: 0.7rem;
				border-bottom: 0.025rem solid #E7E7E7;
				margin: 0 auto;
				background: #fff;
			}
			/*.sort_letter {
				width: 85%;
				padding-left: 0rem;
				height: 1.5rem;
				line-height: 1.5rem;
				color: #666;
				font-size: 0.7rem;
				border-bottom: 0.025rem solid #E7E7E7;
				float:left;
				background: #fff;
			}*/
			
			.sort_letter:first-child {
				margin-top: 0rem;
			}
			/*.chat {
				width: 25%;
				height: 100%;
				float: left;
			}*/
			
			.chat {
				width: 24%;
				height: 100%;
				float: left;
			}
			
			.c_a {
				display: block;
				width: 3.2rem;
				height: 1.3rem;
				border-radius: 0.65rem;
				font-size: 0.6rem;
				color: #fff;
				text-align: center;
				line-height: 1.3rem;
				background: #32CEA0;
				margin: 1.525rem 0;
			}
			
			.ope {
				width: 31%;
				height: 100%;
				float: left;
				display: flex;
				background: #f2f2f2;
			}
			
			.notes {
				width: 50%;
				height: 100%;
				text-align: center;
			}
			
			.del {
				width: 50%;
				height: 100%;
			}
			
			.notes>img {
				width: 1.05rem;
				height: 1.05rem;
				margin: 1.65rem 0;
			}
			
			.del>img {
				width: 1.05rem;
				height: 1.05rem;
				margin: 1.65rem 0;
			}
			
			.mask {
				width: 100%;
				height: 100%;
				background: rgba(0, 0, 0, 0.5);
				position: fixed;
				top: 0;
				left: 0;
				z-index: 301;
				display: none;
			}
			
			.boxs {
				width: 85%;
				height: auto;
				border-radius: 0.2rem;
				background: #fff;
				position: fixed;
				top: 50%;
				left: 50%;
				-webkit-transform: translateX(-50%) translateY(-50%);
				-webkit-transform: translateX(-50%) translateY(-50%);
				-moz-transform: translateX(-50%) translateY(-50%);
				-ms-transform: translateX(-50%) translateY(-50%);
				transform: translateX(-50%) translateY(-50%);
				z-index: 302;
				display: none;
			}
			
			.btn {
				width: 100%;
				height: 2.625rem;
				display: flex;
				border-top: 0.05rem solid #f0f0f0;
			}
			
			.bs_left {
				width: 49%;
				height: 100%;
				border-right: 0.05rem solid #f0f0f0;
				text-align: center;
				line-height: 2.625rem;
				color: #5F5F5F;
				font-size: 0.8rem;
			}
			
			.bs_right {
				width: 50%;
				height: 100%;
				text-align: center;
				line-height: 2.625rem;
				color: #32CEA0;
				font-size: 0.8rem;
				font-weight: 550;
			}
			
			.san {
				width: 100%;
				height: 4.5rem;
				font-size: 0.8rem;
				font-weight: 600;
				text-align: center;
				color: #333;
				line-height: 4.5rem;
			}
			/*选中按钮*/
			
			.xz {
				width: 0.9rem;
				height: 0.9rem;
				-webkit-appearance: none;
				border: 0.05rem solid rgba(0, 0, 0, 0.5);
				border-radius: 50%;
				outline: none;
				margin-top: 1.725rem;
				/*display: none;*/
			}
			
			.xz:checked {
				background: url("__HOME_IMAGES__/newvnet/imgtxt/icon_lian_lv@2x.png")no-repeat center;
				background-size: 100% 100%;
				border: 0.05rem solid #32CEA0;
				border-radius: 50%;
			}
			/*选中按钮*/
			
			.save {
				width: 100%;
				height: 2.9rem;
				background: #f8f8f8;
				position: fixed;
				left: 0;
				bottom: 0;
				z-index: 301;
				display: none;
			}
			
			.s_cen {
				width: 90%;
				height: 2rem;
				background: #32CEA0;
				border-radius: 0.2rem;
				margin: 0.45rem auto;
				line-height: 2rem;
				color: #fff;
				font-size: 0.7rem;
				font-weight: 600;
				text-align: center;
			}
			
			.links {
				display: block;
				width: 100%;
				height: 100%;
				text-decoration: none;
			}
			
			.box_cen {
				width: 100%;
				height: 4.35rem;
				overflow: hidden;
			}
			.model {
				position: fixed;
				bottom: 10rem;
				left: 50%;
				transform: translate(-50%, 0%);
				width: auto;
				height: 2.2rem;
				padding: 0 0.75rem;
				background: rgba(0, 0, 0, 0.5);
				color: #fff;
				font-size: 0.8rem;
				text-align: center;
				line-height: 2.2rem;
				border-radius: 0.26rem;
				white-space: nowrap;
				display: none;
			}
			.long{
				display: block;
				width: 0.025rem;
				height: 1rem;
				background: #e2e2e2;
				float:left;
				margin: 0.075rem 0;
			}
			.sou{
				display: block;
				width: 1.875rem;
				height: 100%;
				text-align: center;
				font-size:0.55rem;
				color:#32CEA0;
				float:left;
				line-height: 1.15rem;
			}
			.box_big{
				width: 100%;
				height: 100%;
				background: #fff;
			}
			
