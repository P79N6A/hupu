<!doctype html>
<html>

<head>
	<meta charset="UTF-8">
	<title>展示一切</title>
	<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
	<link rel="stylesheet" type="text/css" href="__HOME_CSS__/add/css/mui.min.css" />
	<link rel="stylesheet" type="text/css" href="__HOME_CSS__/add/css/index.css" />
	<link rel="stylesheet" type="text/css" href="__HOME_CSS__/add/css/style.css" />
	<script src="__HOME_CSS__/add/js/jquery-3.1.0.min.js" type="text/javascript" charset="utf-8"></script>
	<script src="__HOME_CSS__/add/js/mui.min.js" type="text/javascript" charset="utf-8"></script>

	<style type="text/css">
		body {
			background: #f0eff6;
		}

		.in {
			width: 90%;
			margin: 0 auto;
			height: 1rem;
			background: #fff;
			margin-top: 0.3rem;
			line-height: 1rem;
		}

		.in span {
			margin-left: 0.3rem;
			color: #4e4b4b;
		}

		.in2 span {
			margin-left: 0.3rem;
			color: #909389;
		}

		.in1 input {
			width: 1rem;
			height: 0.5rem;
			float: right;
			margin-right: 0.2rem;
			margin-top: 0.3rem;
			border: none;
			background: #2FB3D3;
			color: #fff;
		}

		.in2 span:nth-child(2) {
			float: right;
			margin-right: 0.5rem;
		}

		.in1 input::placeholder,
		.in2 input::placeholder {
			color: #C8C7CC;
			font-size: 0.22rem
		}

		.hint {
			width: 90%;
			height: 0.5rem;
			line-height: 0.5rem;
			margin: 0.1rem auto 0;
			font-size: 0.25rem;
			color: #2FB3D3;
		}

		.clearfix:after {
			content: ".";
			display: block;
			height: 0;
			clear: both;
			visibility: hidden;

		}

		.fl {
			float: left;
		}

		.btn {
			width: 1rem;
			height: 0.5rem;
			line-height: 0.5rem;
			float: right;
			margin-top: 0.3rem;
			margin-right: 0.2rem;
			color: #fff;
			background: #FF9D49;
			border: 0;
			padding: 0 0 ;
		}

		.box_content {
			margin-top: 0.3rem;
		}

		.item {
			width: 90%;
			margin: 0 auto;
			height: 1rem;
			background: #fff;
			line-height: 1rem;
		}

		.check {
			width: 15%;
			height: 1rem;
			position: relative;
			display: none;
		}

		.check img {
			width: 22px;
			height: 22px;
			position: absolute;
			top: 50%;
			left: 60%;
			margin-top: -11px;
			margin-left: -11px;
		}


		/* 底部选中 */

		.footer {
			width: 100%;
			height: 1rem;
			background: #fff;
			position: fixed;
			left: 0;
			bottom: 0;
			display: none;
		}

		.footer .check_all {
			width: 70%;
			height: 100%;
		}

		.footer .check_all_box {
			width: 2rem;
			height: 1rem;
			position: relative;
		}

		.check_all_box img {
			width: 0.4rem;
			height: 0.4rem;
			position: absolute;
			top: 50%;
			left: 18%;
			margin-top: -0.2rem;

		}

		.check_all_box p {
			font-size: 0.3rem;
			color: #000;
			width: 0.8rem;
			height: 0.5rem;
			line-height: 0.5rem;
			text-align: center;
			position: absolute;
			top: 50%;
			left: 50%;
			margin-top: -0.25rem;
		}

		.footer .delete {
			width: 30%;
			background: #34B1D3;
			color: #fff;
			height: 100%;
			font-size: 0.3rem;
			text-align: center;
			line-height: 1rem;
		}

		#addbtn{
			padding: 0 0;
			height: 0.5rem;
			line-height: 0.5rem;
		}
	</style>
	<script type="text/javascript">
		mui.init();
	</script>
</head>

<body>

	<div class="in in1 clearfix">
		<span>展示一切</span>
		<button class="btn">管理</button>
		<input type="button" name="" id="addbtn" value="添加" onclick="add()" />

	</div>
	<div class="hint">温馨提示：展示一切列表左滑修改和删除哦！！！</div>
	<div class="data_box">
		<volist name="data" id="vo">
			<div class="box_content clearfix">
				<div class="check fl" data-id="{$vo['id']}">
					<img src="/Public/Home/images/no_color_check.png" alt="">
				</div>
				<div class=" in2 item">
					<li class="mui-table-view-cell" style="padding-top:0px">
						<div class="mui-slider-right mui-disabled" style="height:88%">
							<a class="mui-btn mui-btn-grey" href="{:U('Home/Card/showListCard?id='.$vo['id'])}">修改</a>
							<a class="mui-btn mui-btn-red" onclick="del({$vo['id']})">删除</a>
						</div>
						<div class="mui-slider-handle">
							<div class="mui-table-cell">
								<div class="zzc_myranwen_newbox">
									<p class="zzc_myranwen_newbox_p" style="overflow: hidden;text-overflow:ellipsis;white-space: nowrap;">
										<if condition="$vo['title'] eq ''">
											&nbsp;
											<else/> {$vo.title}
										</if>
									</p>
								</div>
							</div>
						</div>
					</li>
				</div>
			</div>
		</volist>
	</div>
	<div class="footer clearfix">
		<div class="fl check_all">
			<div class="clearfix check_all_box">
				<img class="fl" src="/Public/Home/images/no_color_check.png" alt="">
				<p class="fl">全选</p>
			</div>
		</div>
		<div class="fl delete">
			删除(0)
		</div>
	</div>
	<script>
		var user_id = '{$unionid}';
		console.log(user_id)

		function del(id) {
			mui.confirm("是否删除？", "", ["否", "是"], function (res) {
				if (res.index == 1) {
					$.post("{:U('Home/Card/delCard')}", {
						'id': id
					}, function (res) {
						if (res.status == 1) {
							mui.toast("删除成功");
							setTimeout(function () {
								top.location.href = "{:U('Home/Card/showCard')}";
							}, 1000);
						} else {
							mui.toast("删除失败");
						}
					});

				}
			});
		}

		function add() {
			top.location.href = "{:U('Home/Card/showListCard')}";
		}

		var num = 0;
		//点击管理
		$(".btn").on("click", function () {
			$(this).toggleClass("hide").text("取消");
			$(".footer").show();
			$(".check").show();
			$(".item").addClass("fl").css({
				"width": "85%",
				"margin": "0 0"
			});

			$(".data_box").css("padding-bottom", "1.1rem");

			if (!$(this).hasClass("hide")) {
				$(".footer").hide();
				$(".check").hide();
				$(".item").removeClass("fl").css({
					"width": "90%",
					"margin": "0 auto"
				})
				$(".data_box").css("padding-bottom", "0");
				$(this).text("管理");

				$(".check").each(function (i, item) {
					$(item).find("img").attr("src", "/Public/Home/images/no_color_check.png");
					$(item).removeClass("checked");

				})
				$(".check_all_box").removeClass("check_all").find("img").attr("src", "/Public/Home/images/no_color_check.png");
			}
		})


		//多选

		$(".check").on("click", function () {
			$(this).toggleClass("checked");
			if ($(this).hasClass("checked")) {
				$(this).find("img").attr("src", "/Public/Home/images/color_check.png");
				num++;
				dels();
			}
			if (!$(this).hasClass("checked")) {
				$(this).find("img").attr("src", "/Public/Home/images/no_color_check.png");
				num--;
				dels();
			}

			var checked = $(".checked");
			var all = $('.check');
			if (checked.length == all.length) {
				$(".check_all_box").addClass("check_all").find("img").attr("src", "/Public/Home/images/color_check.png")
			} else {
				$(".check_all_box").removeClass("check_all").find("img").attr("src", "/Public/Home/images/no_color_check.png")
			}

		})


		// 全选
		$(".check_all_box").on("click", function () {
			var all;
			$(this).toggleClass("check_all");
			if ($(this).hasClass("check_all")) {
				$(this).find("img").attr("src", "/Public/Home/images/color_check.png");
				$(".check").each(function (i, item) {
					$(item).find("img").attr("src", "/Public/Home/images/color_check.png");
					$(item).addClass("checked");
					all = i

				})
				num = all + 1
				dels();
			}

			if (!$(this).hasClass("check_all")) {
				$(this).find("img").attr("src", "/Public/Home/images/no_color_check.png");
				$(".check").each(function (i, item) {
					$(item).find("img").attr("src", "/Public/Home/images/no_color_check.png");
					$(item).removeClass("checked");
				})
				num = 0;
				dels();
			}
		});


		//点击删除
		$(".delete").on("click", function () {
			var delarr = [];
			if (!$(".check").hasClass("checked")) {
				mui.toast("请至少选择一个删除");
				return false;
			} else {
				$(".check").each(function (i, e) {
					if ($(this).hasClass("checked")) {
						delarr.push($(this).attr("data-id"));
					}
				});
				var arr_string = delarr.toString();
				console.log(arr_string)

				mui.confirm("是否删除？", "", ["否", "是"], function (res) {
					if (res.index == 1) {

						$.ajax({
							type: "post",
							url: "index.php?s=/Api/AppApi/all_del",
							data: {
								unionid: user_id,
								type: 2,
								ids: arr_string
							},
							success: function (res) {
								num = 0;
								console.log(res)
								mui.toast("删除成功");
								$(".check_all_box").removeClass("check_all").find("img").attr("src",
									"/Public/Home/images/no_color_check.png");
								$(".check").each(function (i, e) {
									if ($(this).hasClass("checked")) {
										$(this).parent().remove();
									}
									if ($(".check").length == 0) {
										$(".btn").click();
									}
								});
								dels();
							},
							error: function () {
								mui.toast("删除失败");
								alert("服务器繁忙，请稍候重试。");
							}
						})


					}
				});






			}




		})

		function dels() {
			$(".delete").text("删除(" + num + ")");
		}
	</script>
	<script src="__HOME_CSS__/add/js/index.js" type="text/javascript" charset="utf-8"></script>
	<script src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js" type="text/javascript"></script>
	<script type="text/javascript">
		document.addEventListener('WeixinJSBridgeReady', function onBridgeReady() {
			// 通过下面这个API隐藏右上角按钮hideOptionMenu
			WeixinJSBridge.call('hideOptionMenu');
		});
	</script>
</body>

</html>