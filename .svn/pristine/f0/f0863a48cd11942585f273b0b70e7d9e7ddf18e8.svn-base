<script src="__HOME_JS__/yb/js/sortable.js"></script>
<script>
    Sortable.create(content, {});
    var unionid = '{$unionid}';
    var arr = [];
    $.ajax({
        url: "/index.php?s=/Api/NewShowListApi/show_list_type",
        typr: 'post',
        data: {
            unionid: unionid,
        },

        success: function (res) {
            console.log(res);

            var detail = res.AppendData;

            var list = '';
            $.each(detail, function (k, v) {
                list += '<div class="moren" data-id="'+v.id+'">'
                list += '<div class="leftop">'
                if(k==0){
                	list += '<img src="Public/Home/images/vwzz/lable_mo.png" alt="">'
                	list += '<span class="leftzzzt">默认</span>'
                }else{
                	list += '<img src="Public/Home/images/vwzz/lable_zidingyi.png" alt="">'
               		list += '<span class="leftdt">自定义</span>'
                }
                list += '</div>'
                list += '<div class="titlem">'+v.title+'</div>'
                list += '<div class="xiugai">'
                list += '<img src="Public/Home/images/vwzz/icon_paixu.png" alt="">'
                list += '</div>'
                list += '</div>'
            })
            
            $("#content").html(list)
        },
    })





    //点击确定
    $("#submit").on("click", function () {
        var listarr = [];
        $(".moren").each(function (i, e) {
        	arr.push($(this).attr("data-id"));
            listarr.push(i+1);
        });
        var a = arr[0]
	    var b = arr[1]
	    var c = arr[2]
	    var d = arr[3]
        var content= ""+a+"="+listarr[0]+","+b+"="+listarr[1]+","+c+"="+listarr[2]+","+d+"="+listarr[3]+""
        console.log(content)
        $.ajax({
            url: "index.php?s=/Api/NewShowListApi/show_list_type_sort",
            type: 'post',
            data: {
                unionid: unionid,
                content: content,
            },
            success: function (res) {
                window.location.reload();
            },
        })
    })
</script>
