<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="/Public/Home/js/whjs/js/jquery-1.8.3.min.js"></script>
    <script src="/Public/Home/js/whjs/js/newrem.js"></script>
    <link rel="stylesheet" href="/Public/Home/css/wh/base.css">
    
    <title>相册模板</title>
    <style>
        body,
        html {
            padding-top: .48rem;
        }

        .header {
            width: 100%;
            height: .48rem;
            position: fixed;
            background: #fff;
            z-index: 10;
            top: 0;
            overflow-x: scroll;
            overflow-y: hidden;
            border-bottom: 1px solid #f6f6f6;
            white-space: nowrap;
        }

        .header .item {
            display: inline-block;
            height: 100%;
            line-height: .48rem;
            padding: 0 .1rem;
            position: relative;
            font-size: .13rem;
        }

        .header .item .line {
            width: .32rem;
            height: .03rem;
            background: #32CEA0;
            position: absolute;
            bottom: 0;
            left: 50%;
            margin-left: -.16rem;
            border-radius: .03rem;
            display: none;
        }

        .active {
            font-size: .16rem !important;
            color: #32CEA0;
        }

        .main {
            width: 100%;
            margin-top: .05rem;
        }

        .main ul {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
        }

        .main ul li {
            width: 1.2rem;
            margin: 0 0.025rem;
            margin-bottom: .1rem;

        }
        .main ul li a{
            display: block;
            width: 100%;
            height: 100%;
        }


        .main ul li a img{
            width: 100%;
            height: 1.8rem;
            vertical-align: top;
        }

         .main ul li a .chioce{
             width: 100%;
             height: .24rem;
             margin-top: .08rem;
         }

           .main ul li a .chioce button{
               width: 50%;
               height: 100%;
               border: 0;
               background: #fff;
               text-align: center;
               outline: none;
               font-size: .14rem;
           }

              .main ul li a .chioce button.select{
                  background: #32CEA0;
                  color: #fff;
              }

              .tip{
                  width: 1rem;
                  height: .2rem;
                  line-height: .19rem;
                  background: rgba(0, 0, 0, 0.6);
                  color: #fff;
                  text-align: center;
                  padding: .05rem 0;
                  border-radius: .04rem;
                  position: fixed;
                  top: 50%;
                  left: 50%;
                  margin-left: -0.5rem;
                  margin-top: -0.1rem;
                  display: none;
              }
              .me{
				width:0.7rem;
				height:0.7rem;
				background:rgba(50,206,160,1);
				box-shadow:0px 2px 6px 0px rgba(50,206,160,1);
				position: fixed;
				bottom:0.6rem;
				right:0.2rem;
				font-size: 0.2rem;
				color:#fff;
				text-align: center;
				line-height:0.7rem;
				border-radius: 50%;
			}
			.me>a{
				display: block;
				width: 100%;
				height:100%;
				font-size: 0.2rem;
				color:#fff;
			}
    </style>
</head>

<body>
    <div class="header">
        <!-- 相册分类 -->
    </div>
    <div class="main">
        <ul class="album_box">
         <!-- 相册模板 -->
        </ul>
    </div>
    <div class="tip">添加成功</div>
    <div class="me"><a href="/index.php?s=/Home/Selecttemplate/all_template&type=3">我的</a></div>
</body>

</html>
<script>
    $(function () {
        var unionid = '{$unionid}';
        var user_id = '{$id}';
        var type_id = 6;
        $('.header').on('click', '.item', function () {
            $(this).addClass('active').find('.line').show().parent().siblings().removeClass('active').find('.line').hide();
            type_id = $(this).attr('data-type');
            render_template(type_id)


        })

        $.ajax({
            type: 'post',
            url: 'index.php?s=/Api/IndexApi/get_album_type', //渲染分类
            data: {
                unionid: unionid
            },
            success: function (res) {
                var data = res.AppendData;
                // console.log(res)
                if (res.ResultType == 0) {
                    var list = '';
                    $.each(data, function (k, v) {
                        if (k == 0) {
                            list += '<div class="item active" data-type="' + v.id + '" >' +
                                v.title + ''
                            list += '<div class="line" style="display:block;"></div>'
                            list += '</div>'
                        } else {
                            list += '<div class="item" data-type="' + v.id + '">' + v.title +
                                ''
                            list += '<div class="line"></div>'
                            list += '</div>'
                        }

                    })
                    $('.header').html(list)
                }
            }
        })

        render_template(type_id)
        function render_template (tp_id) {
            $.ajax({
                url:'index.php?s=/Api/IndexApi/get_album_list',
                type:'post',
                data:{
                    unionid:unionid,
                    type_id: tp_id
                },
                success:function(res){
                    console.log(res)
                    var data = res.AppendData;
                    if(res.ResultType == 0){
                        var render_muban = ''
                        $.each(data.model,function(k,v){
                            render_muban+= '<li>'
                            render_muban+= '<a href="javascript:;">'
                            render_muban+= '<img src="'+v.cover_img+'" alt="">'
                            render_muban+= '<div class="chioce clearfix">'
                            render_muban+= '<button class="preview fl" data-id="'+v.id+'" >预览</button>'
                            render_muban+= '<button class="select fl" data-id="'+v.id+'">选定</button>'
                            render_muban+='</div>'
                            render_muban+= '</a>'
                            render_muban+='</li>'
                        })

                        $('.album_box').html(render_muban);
                    }
                }
            })
        }

        //选定
        $('.album_box').on('click','.select',function(){
           var select_id = $(this).attr('data-id');
           console.log(select_id)

           $.ajax({
               url:'index.php?s=/Api/IndexApi/add_album',
               type:'post',
               data:{
                   unionid:unionid,
                   model_id:select_id
               }, 
               success:function(res){
                   console.log(res)
                   var data = res.AppendData;
                   $('.tip').stop(true).fadeIn(1000).fadeOut(1000,function(){
                       location.href = 'index.php?s=/Home/photo/photo_edit&preview='+data+'&cids='+type_id+''
                   })
               }
           })
        })

        $('.album_box').on('click','.preview',function(){
            var id = $(this).attr('data-id');
            location.href = 'index.php?s=/Home/photo/photo_preview/preview/'+id+'/modify/0/uid/'+unionid+'/id/'+user_id+''
        })

       







    })
</script>