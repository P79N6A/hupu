<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="viewport" content="initial-scale=1, user-scalable=0, minimal-ui" charset="UTF-8">
    <link rel="stylesheet" href="/Public/Home/css/wh/base.css">
    <script src="/Public/Home/js/whjs/js/jquery-1.8.3.min.js"></script>
    <script src="/Public/Home/js/whjs/js/newrem.js"></script>
    <title>{$title}</title>
    <style>
        html,
        body {
            background: #fff;
            padding-top: .5rem;
        }

        .header {
            background: #fff;
            border-bottom: 1px solid #f6f6f6;
            width: 100%;
            padding: 0 .1rem;
            box-sizing: border-box;
            overflow-x: scroll;
            overflow-y: hidden;
            position: fixed;
            top: 0;
        }

        .header .list {
            height: 100%;
            width: 100%;
            height: .46rem;
            white-space: nowrap;
            display: block;
            overflow-x: scroll;
            position: relative;
            font-size: 0;



        }


        .header .list li {
            width: 100px;
            height: 100%;
            line-height: .46rem;
            color: #777777;
            text-align: center;
            display: inline-block;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            margin-right: 5px;
            font-size: .13rem;

        }

        .line {
            width: 100px;
            height: .03rem;
            /* background: #32CEA0; */
            position: absolute;
            bottom: 0;
            left: 0;
            z-index: 2;
            background: linear-gradient(80deg, transparent 30%, #32CEA1 20%, #32CEA0 70%, transparent 40%) !important;

        }

        .active {
            color: #32CEA0 !important;
            font-size: .16rem !important;
        }



        .main .product {
            width: 100%;
            border-bottom: 1px solid #f6f6f6;
            box-sizing: border-box;
            background: #fff;
        }

        .main .product a {
            display: block;
            padding: .115rem .12rem .14rem .131rem;
        }

        .main .product a .shop_imgbox img {
            width: .54rem;
            height: .52rem;
            display: block;
            border-radius: .05rem;
        }

        .main .product a .ms {
            padding-left: .1rem;
            width: 80%;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .main .product a .ms h5 {
            font-size: .16rem;
            padding-bottom: .1rem;
            width: 100%;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .main .product a .ms p {
            font-size: .14rem;
            width: 100%;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            color: #333;
            opacity: 0.45;
        }

        /* 加载中 */
        .loading{
            width: 100%;
            height: .4rem;
            display: none;

        }

        .loading .load_box{
            width: 100%;
            height: 100%;
            position: relative;
        }

         .load_box img{
             width: .2rem;
             height: .2rem;
             position: absolute;
             top: 50%;
             margin-top: -.1rem;
             margin-left: -.1rem;
             left: 40%;
         }

        .load_box p{
            font-size: .16rem;
            height: .2rem;
            width: .6rem;
            position: absolute;
            top: 50%;
            margin-top: -0.1rem;
            left: 50%;
            margin-left: -0.1rem;

        }

    </style>
</head>

<body>
    <div class="header">
        <ul class="list">
            <!-- 产品分类 -->
        </ul>
    </div>
    <div class="main">
            <!-- 产品数据 -->
    </div>

    <div class="loading">
        <div class="load_box">
            <img src="/Public/Home/images/loadad.gif" alt="">
            <p>加载中...</p>
        </div>
    </div>


</body>

</html>
<script>
    $(function () {
        var unionid = '{$unionid}';
        var id = '{$id}';
        var type; //默认值
        var i = 0;

        $(".list").on("click", "li", function () {
            var index = $(this).index();
            $(this).addClass("active").siblings().removeClass("active");
            var li_width = ($(this).width() + 5);
            $(".list .line").stop(false, true).animate({
                'left': index * li_width + "px",
                'bottom': '0px'
            }, 100);
            scrollFlag = true;
            var tip = '';
            tip+= '<div class="load_box">'
            tip+= '<img src="/Public/Home/images/loadad.gif" alt="">'
            tip+= '<p>加载中...</p>'
            tip+= '</div>'
            $('.loading').html(tip).hide();
            $('body,html').scrollTop('0px');
            type = $(this).attr('data-tyid');
            i = 0;
            console.log(i)
            console.log(type)
            render_pordouct(type,i)
        })

     
        $.ajax({
            type: 'post',
            url: '/index.php?s=/Api/NewProductApi/product_type',
            data: {
                unionid: unionid
            },
            success: function (res) {
                console.log(res)
                var data = res.AppendData;
                type = data[0].id;
                console.log(type)
                var type_list = '';
                $.each(data, function (k, v) {
                    if (k == 0) {
                        type_list += '<li class="active" data-tyid="' + v.id + '">' + v.title +'</li>'
                    } else {
                        type_list += '<li data-tyid="' + v.id + '">' + v.title + '</li>'
                    }

                })
                type_list += '<div class="line"></div>'
                $('.list').html(type_list);
                render_pordouct(type,i)

            }
        })


            function render_pordouct (type,index) {
                $.ajax({
                    type:'post',
                    url:'/index.php?s=/Api/IndexApi/product_list',
                    data:{
                        unionid: unionid,
                        new_type:type,
                        length:10,
                        start:index

                    },
                    beforeSend:function(){
                        $('.loading').show();
                    },
                    success:function(res){
                        $('.loading').hide();
                        scrollFlag = true;
                        console.log(res)
                        if(res.AppendData.length == 0 && index == 0){
                            $('.main').html('<p style="text-align:center;margin-top: 50px;">您的当前分类下暂时没有数据哦</p>')
                        }else if(res.AppendData.length == 0 && index > 0) {
                            scrollFlag = false;
                            $('.loading').html('<p style="text-align:center;line-height:0.4rem;">没有更多数据了</p>').show();
                        }
                        if(res.ResultType == 0){
                            var data_prodouct = res.AppendData;
                            var list_prodouct = '';
                            $.each(data_prodouct,function(k,v){
                                    list_prodouct+= '<div class="product" data-id="'+v.id+'" >'
                                    list_prodouct+= '<a class="clearfix" href="/index.php?s=/Home/vhome/propreview/p_id/'+v.id+'">'
                                    list_prodouct+= '<div class="fl shop_imgbox">'
                                    list_prodouct+= '<img src="'+v.cover_img+'" alt="">'
                                    list_prodouct+= '</div>'
                                    list_prodouct+= '<div class="fl ms">'
                                    list_prodouct+= '<h5>'+v.title+'</h5>'
                                    list_prodouct+= '<p>'+v.describe+'</p>'
                                    list_prodouct+= '</div>'
                                    list_prodouct+= '</a>'
                                    list_prodouct+= '</div>'
                            })
                               
                            if(!index == 0){
                                 $('.main').append(list_prodouct);
                            }else{
                                 $('.main').html(list_prodouct)
                            }
                        }
                    
                    },
                    error:function(){
                        scrollFlag = false;
                        console.log('走了错误的')
                    }
                })

            }


        var scrollFlag = true;
        $(window).scroll(function () {

            //已经滚动到上面的页面高度
            var scrollTop = $(this).scrollTop();
            //页面高度
            var scrollHeight = $(document).height();
            //浏览器窗口高度
            var windowHeight = $(this).height();
            if(!scrollFlag){
                return false
            }
            if(scrollTop + windowHeight >= scrollHeight){
                 i += 10;
                 console.log(i)
                 console.log(type)
                 scrollFlag = false;
                 render_pordouct(type,i)
            }

            
        })
    




    })
</script>