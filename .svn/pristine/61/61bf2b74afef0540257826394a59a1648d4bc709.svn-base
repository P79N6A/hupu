    <style>
        body {
            background-color: #fff;
        }

        * {
            margin: 0;
            padding: 0;
        }

        #article-body {
            width: 90%;
            margin: 0 auto;
            min-height: 500px;
            box-sizing: border-box;
            color: #444;
            font-size: 1rem;
        }

        img {
            width: 100%;
            height: auto;
        }

        .Eleditor-controller {
            height: 8rem;
            margin-bottom: 2.5rem;
            z-index: 100;
        }

        .top {
            width: 100%;
            height: 3rem;
            line-height: 3rem;
            background: #fff;
            box-shadow: 0rem 0.05rem 0.2rem 0rem rgba(0, 0, 0, 0.08);
            color: #666;
            margin-bottom: 0.5rem;
        }

        .top_cen {
            width: 90%;
            height: 100%;
            margin: 0 auto;
        }

        .top_left {
            width: 6rem;
            height: 100%;
            float: left;
        }

        .sel {
            float: left;
            width: 4.5rem;
            height: 100%;
            font-size: 0.75rem;
            color: #666;
        }

        .sel_jt {
            float: left;
            width: 0.8rem;
        }

        .save {
            display: block;
            width: 100%;
            height: 100%;
            line-height: 2.5rem;
        }

        .acc {
            float: right;
            width: 3rem;
            height: 100%;
            line-height: 3rem;
            font-size: 0.8rem;
            color: #2FB3D3;
            text-align: right;
            cursor: pointer;
        }

        #classification {
            height: 100%;
            z-index: 501;
            width: 100%;
            position: fixed;
            background: #fff;
            top: 2.5rem;
            display: none;
        }

        #classification .title_name {
            width: 90%;
            margin: 0 auto;
            height: 3rem;
            line-height: 3rem;
        }

        #classification .title_name p:first-child {
            font-size: 0.9rem;
            color: #333;
        }

        .fl {
            width: 80%;
            float: left;
            font-size: 0.75rem;
        }

        .fr {
            width: 20%;
            float: left;
            text-align: right;
        }

        .fr>a {
            display: block;
            width: 100%;
            height: 100%;
            text-decoration: none;
            font-size: 0.75rem;
            color: #999;
        }

        #classification .ul_box {
            padding-left: .55rem;
            padding-right: .65rem;
        }

        .ul_box li {
            width: 31.8%;
            text-align: center;
            background: #E8E8E8;
            border-radius: .125rem;
            height: 2.1rem;
            margin-left: .25rem;
            margin-top: .25rem;
            color: #000;
            line-height: 2.1rem;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            cursor: pointer;
        }

        #add_li {
            width: 1.5rem;
            height: 1.475rem;
            margin-top: .6rem;
            margin-left: .8rem;
            cursor: pointer;
        }

        .closes {
            width: 2.25rem;
            height: 2.25rem;
            border-radius: 50%;
            position: fixed;
            bottom: 4.9rem;
            right: 1.7rem;
            box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.16);
        }

        .closes img {
            width: 1rem;
            height: 1rem;
            margin-left: .6rem;
            margin-top: .6rem;
        }

        .max_sr {
            background-color: #fff;
            width: 100%;
            height: 3rem;
            line-height: 3rem;
            position: fixed;
            bottom: 0px;
            left: 0;
            font-size: 0;
            z-index: 510;
            display: none;
            padding-top: 0.15rem;
            border-top: 1px solid #f2f2f2;
        }

        .sr_fl {
            width: 90%;
            margin: 0 auto;
            height: 2.5rem;
            line-height: 2.5rem;
        }

        .sr {
            display: inline-block;
            width: 80%;
            height: 2.5rem;
            border-radius: 0.625rem;
        }

        .sr>input {
            width: 100%;
            height: 2rem;
            border-radius: 1rem;
            font-size: 0.8rem;
            border: 1px solid #9E9E9E;
            text-indent: 1rem;
        }

        .sr_qx {
            display: inline-block;
            width: 20%;
            height: 2.5rem;
            line-height: 2.5rem;
            font-size: 0.8rem;
            text-align: center;
            cursor: pointer;
        }

        .title {
            width: 90%;
            margin: 0 auto;
            height: 3rem;
            z-index: 100;
        }

        .ipt {
            width: 100%;
            height: 100%;
            border-top: none;
            border-left: none;
            border-right: none;
            border-bottom: 1px solid #ECECEC;
            font-size: 1.1rem;
            padding: 0;
            margin-bottom: 0;
            line-height: 3rem;
        }

        .zzc_myruanwen_from_li {
            width: 90%;
            margin: 0 auto 3rem;
            height: 2.5rem;
            line-height: 2.5rem;
            border-top: 1px solid #CCCCCC;
        }

        .zzc_myruanwen_from_li_div {
            font-size: 0.75rem;
        }

        .zzc_myruanwen_from_li_div>a {
            float: right;
            width: 50%;
            height: 100%;
            text-align: right;
            text-decoration: none;
            color: #9C9C9C;
        }

        .foot {
            width: 100%;
            height: 2.5rem;
            position: fixed;
            left: 0;
            bottom: 0;
            z-index: 101;
        }

        .zx_qx {
            width: 50%;
            height: 100%;
            background-color: #fff;
            color: #000;
            float: left;
            border: none;
            font-size: 0.75rem;
        }

        .zx_bc {
            width: 50%;
            height: 100%;
            background-color: #2FB3D3;
            color: #fff;
            float: left;
            font-size: 0.75rem;
            border: none;
        }

        .mui-icon {
            float: right;
            width: 0.45rem;
            height: 100%;
            line-height: 2.9rem;
            margin-left: 20px;
        }

        video {
            width: 100%;
            height: 100%;
        }

        .active {
            background: #2FB3D3 !important;
            color: #fff !important;
        }

        .layui-layer-padding {
            position: fixed !important;
            top: 0 !important;
            left: 0 !important;
            width: 100% !important;
            height: 100% !important;
            background: rgba(153, 153, 153, 0.6) !important;
            z-index: 500;
            color: #fff;
            font-size: 0.75rem;
            text-align: center;
            line-height: 25rem;
        }

        .webuploader-element-invisible {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
        }

        .Eleditor-mask {
            font-size: 0.75rem;
        }

        .Eleditor-loading p {
