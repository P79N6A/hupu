<body>
<div id="app">
    <mt-header title="接待信息列表">
        <router-link to="/" slot="left">
            <mt-button icon="back" @click="window.history.go(-1);">返回</mt-button>
        </router-link>
        <!--<mt-button icon="more" slot="right"></mt-button>-->
    </mt-header>
    <div style="overflow: scroll;">
        <mt-field label="补充标题" type="textarea" rows="2" v-model="ptitie" placeholder="请输入标题"></mt-field>
        <hr/>
        <p>解决办法</p>
        <!-- 内容编辑区域 -->
        <div id="article-body"></div>
        <mt-button type="primary" @click="i_reception" size="large" style="margin-top: 20px">提交</mt-button>
    </div>
</div>
<script type="text/javascript">
    new Vue({
        el: "#app",
        data: {
            content: "",
            showModuleName: false,
            pid:'',
            ptitie:'',
            pdis:'',
            psolve:'',
            customer_id:'',
            createtime:'',
            isfalg:true
        },
        methods: {

            i_reception:function(){
                var t=this;
                var id = '{$pid}';
                if(id==''){
                    t.$toast('重要参数缺失')
                    return;

                }
                if(t.ptitie==''){
                    t.$toast('问题标题不能为空')
                    return;

                }

                t.psolve=$("#article-body").html();

                if(t.psolve==''){
                    t.$toast('请填写如何解决问题')
                    return;
                    // Toast('提示信息')
                }
                if(!t.isfalg){
                    t.$toast('您的点击速度已经超过服务器反应速度！')
                    return;
                }
                t.isfalg=false;
                $.ajax({
                    type: "POST",
                    url: "/index.php?s=/Api/CustomerService/i_u_oneposts",
                    data: {
                        ptitie:t.ptitie,
                        psolve:t.psolve,
                        pid:id
                    },
                    dataType: 'json',
                    xhrFields: {
                        withCredentials: true
                    },
                    crossDomain: true,
                    success: function (res) {
                        //   console.log(res);
                        if(res.ResultType==0){
                            t.$toast('上传成功');
                            window.location.href="/index.php?s=/Home/Customer/center.html";
                            return;
                        }else{
                            t.isfalg=true;
                        }
                    },
                    error: function () {
                        console.log(313)
                    }
                })
            },
            mounted: function() {
                var t = this //很重要！！
                t.cuuid=$.cookie('k_cuuid');
                if( t.cuuid ==null ||  t.cuuid =='' ){
                    window.location.href="/index.php?s=/Home/Customer/att_login.html";
                }
            }
        }
    })

    /*实例化一个编辑器*/
    var artEditor = new Eleditor({
        el: '#article-body',
        upload: {
            server: '/index.php?s=/Api/CustomerService/uploads&id=468',
            compress: false,
            fileSizeLimit: 5, //设置文件上传大小，
            formName: 'pic', //设置文件name,
        },

        /*初始化完成钩子*/
        mounted: function () {
            var allMaxSize = 30;

            /*以下是扩展插入视频的演示*/
            var _videoUploader = WebUploader.create({
                auto: true,
                server: '/index.php?s=/Api/CustomerService/uploads&id=468',
                /*按钮类就是[Eleditor-你的自定义按钮id]*/
                pick: $('.Eleditor-insertVideo'),
                duplicate: true,
                resize: false,
                //						accept: {
                //							title: 'Images',
                //							extensions: 'mp4',
                //							mimeTypes: 'video/mp4'
                //						},
                fileSizeLimit: allMaxSize * 1024 * 1024, //限制大小30M，所有被选文件，超出选择不上
                fileVal: 'pic',
            });

            _videoUploader.on('uploadProgress', function (_file, _percentage) {
                layer.msg('视频加载中' + parseFloat((_percentage * 100).toFixed(2)) + '%', {
                    icon: 16,
                    shade: 0.1,
                    time: 0
                });
            });

            _videoUploader.on("error", function (type) {
                if (type == "F_DUPLICATE") {
                    win.alert("系统提示", "请不要重复选择文件！");
                } else if (type == "Q_EXCEED_SIZE_LIMIT") {
                    window.alert("所选视频大小不可超过 30M哦！");
                }

            });
            //					_videoUploader.on( 'error', function() {
            // 						window.alert('上传失败：'+arguments[0]);
            // 						layer.closeAll();
            //					});

            _videoUploader.on('uploadSuccess', function (_file, _call) {

                //						console.log(_call);
                if (_call.status == 0) {
                    return window.alert(_call.msg);
                }
                /*保存状态，以便撤销*/
                artEditor.saveState();
                artEditor.getEditNode().after(
                    "<div class='Eleditor-video-area'>" +
                    '<video src="' + _call.url + '" controls="controls">' + '</video>' +
                    "</div>"
                );
                artEditor.hideEditorControllerLayer();
                layer.closeAll();
            });
        },
        /*自定义按钮的例子*/
        toolbars: [
            'insertText',
            'editText',
            'insertImage',
            //自定义一个视频按钮
            {
                id: 'insertVideo',
                // tag: 'p,img', //指定P标签操作，可不填
                name: '插视频',
                handle: function (select, controll) { //回调返回选择的dom对象和控制按钮对象

                    /*因为上传要提前绑定按钮到webuploader，所以这里不做上传逻辑，写在mounted*/

                    /*!!!!!!返回false编辑面板不会关掉*/
                    return false;
                }
            },
            'insertLink',
            'insertHr',
            'delete',
            'undo',
            'cancel'
        ]
    });
</script>
</body>

</html>