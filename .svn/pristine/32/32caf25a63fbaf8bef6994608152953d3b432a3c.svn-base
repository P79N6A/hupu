		}

		.sr_fl {
			width: 90%;
			margin: 0 auto;
			height: 2.5rem;
			line-height: 2.5rem;
		}

		.sr {
			display: inline-block;
			width: 80%;
			height: 2.5rem;
			border-radius: 0.625rem;
		}

		.sr>input {
			width: 100%;
			height: 2rem;
			border-radius: 1rem;
			font-size: 0.8rem;
			border: 1px solid #9E9E9E;
			text-indent: 1rem;
		}

		.sr_qx {
			display: inline-block;
			width: 20%;
			height: 2.5rem;
			line-height: 2.5rem;
			font-size: 0.8rem;
			text-align: center;
			cursor: pointer;
		}

		.title {
			width: 90%;
			margin: 0 auto;
			height: 3rem;
			z-index: 100;
		}

		.ipt {
			width: 100%;
			height: 100%;
			border-top: none;
			border-left: none;
			border-right: none;
			border-bottom: 1px solid #ECECEC;
			font-size: 1.1rem;
			padding: 0;
			margin-bottom: 0;
			line-height: 3rem;
		}

		.zzc_myruanwen_from_li {
			width: 90%;
			margin: 0 auto 3rem;
			height: 2.5rem;
			line-height: 2.5rem;
			border-top: 1px solid #CCCCCC;
		}

		.zzc_myruanwen_from_li_div {
			font-size: 0.75rem;
		}

		.zzc_myruanwen_from_li_div>a {
			float: right;
			width: 50%;
			height: 100%;
			text-align: right;
			text-decoration: none;
			color: #9C9C9C;
		}

		.foot {
			width: 100%;
			height: 2.5rem;
			position: fixed;
			left: 0;
			bottom: 0;
			z-index: 101;
		}

		.zx_qx {
			width: 50%;
			height: 100%;
			background-color: #fff;
			color: #000;
			float: left;
			border: none;
			font-size: 0.75rem;
		}

		.zx_bc {
			width: 50%;
			height: 100%;
			background-color: #2FB3D3;
			color: #fff;
			float: left;
			font-size: 0.75rem;
