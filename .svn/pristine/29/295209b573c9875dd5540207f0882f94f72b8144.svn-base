					success: function (result) {
						// console.log(result);
						if (result.ResultType == 0) {
							// alert('ok');
							mui.toast("修改成功");
							//              	setTimeout(function() {
							//              		// index.php?s=/Home/Photo/show/id/27
							// window.location.href = "__ROOT__/index.php?s=/Home/Photo/show/id/"+tid;
							// }, 2000);
						}
					},
					error: function () {
						alert("服务器繁忙，请稍后再试！");
					}
				})

			}
		</script>
