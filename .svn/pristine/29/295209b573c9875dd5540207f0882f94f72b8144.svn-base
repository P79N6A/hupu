<extend name="./base" />

<block name="css_extend">
	<script src="__HOME_JS__/rem.js"></script>
	<style>
		html {
			margin-bottom: 10px;
		}

		* {
			margin: 0;
			padding: 0;
		}

		ul {
			list-style: none;
		}

		.tab {
			height: 120px;
			width: 98%;
			margin: 0.75rem auto 0;
		}

		.tab:after {
			content: '';
			display: block;
			clear: both;
		}

		.active {
			transform: scale(1.3);
			color: #2FB3D3;
		}

		.tab li {
			width: 27%;
			height: 70px;
			margin: 0 0.55rem;
			text-align: center;
			cursor: pointer;
			list-style: none;
			line-height: 30px;
			float: left;
		}

		.content:after {
			content: '';
			display: block;
			clear: both;
		}

		.content>li {
			width: 98%;
			height: 100%;
			margin: 0 auto;
			background: #f7f7f7;
			display: none;
		}

		.tit {
			margin: 0;
			color: #2FB3D3;
		}

		p {
			margin-top: 5px;
			margin-bottom: 0px;
		}

		.red {
			background-color: #FF69B4;
		}

		.or {
			background-color: #FF4500;
		}

		.ye {
			background-color: #FFFF00;
		}

		.gr {
			background-color: #008000;
		}

		.cy {
			background-color: #00FFFF;
		}

		.bl {
			background-color: #0000FF;
		}

		.pu {
			background-color: #800080;
		}

		.bk {
			background-color: #000000;
		}

		.wh {
			background-color: #ffffff;
		}

		.pi {
			background-color: #FFDAB9;
		}

		.gold {
			background-color: #FFD700;
		}

		.silver {
			background-color: #C0C0C0;
		}

		.col {
			width: 100%;
			height: 15rem;
			margin-bottom: 60px;
		}

		.col>li {
			width: 2.5rem;
			height: 2.5rem;
			margin: 1rem 1.01rem;
			float: left;
			border-radius: 50%;
		}

		.nav {
			width: 3rem;
			height: 3rem;
			margin: 0 auto;
		}

		.nav>img {
			width: 100%;
			height: 100%;
		}

		#div1 {
			width: 98%;
			margin: 0 auto;
			height: auto;
			position: relative;
		}

		#div1>img {
			width: 100%;
			height: auto;
		}

		#div2 {
			position: absolute;
			bottom: 5px;
			left: 5px;
			background: rgba(255, 255, 255, 0.5);
			font-size: 16px;
			line-height: 25px;
			letter-spacing: 2px;
			height: 300px;
			/*padding: 20px 30px;*/
		}

		#Img {
			width: 100%;
			height: 100%;
		}


		.btn {
			width: 100%;
			height: 60px;
			font-size: 0;
			position: fixed;
			bottom: 0;
			left: 0;
		}

		.return {
			width: 50%;
			height: 60px;
			background-color: #fff;
			color: #000;
			border: 0;
		}

		.generate {
			width: 50%;
			height: 60px;
			background-color: #2FB3D3;
			color: #fff;
			border: 0;
		}

		.blank {
			width: 100%;
			height: 60px;
		}

		.cover {
			width: 98%;
			margin: 0 auto;
			height: 200px;
			background-color: #fff;
			margin-bottom: 10px;
			overflow: hidden;
			clear: both;
			margin-top: 5px;
		}

		.cover-img {
			width: 49%;
			height: 200PX;
			float: left;
			position: relative;
			z-index: 200;
		}

		.cover-img>img {
			width: 100%;
			height: 100%;
		}

		.hint {
			width: 49%;
			height: 200px;
			float: left;
			text-align: center;
		}

		.hint>p {
			width: 100%;
			height: 50px;
			line-height: 50px;
			color: red;
		}

		.end {
			width: 100%;
			height: 60px;
		}

		.mask {
			width: 150px;
			height: 120px;
			background: rgba(0, 0, 0, 0.8);
			border-radius: 5px;
			position: fixed;
			top: 50%;
			left: 50%;
			margin-top: -60px;
			margin-left: -75px;
			display: none;
			z-index: 999;
		}

		.mask img {
			width: 40px;
			height: 40px;
			display: block;
			margin: 0 auto;
			margin-top: 20px;
			margin-bottom: 20px;
			animation: rotate 3s linear infinite;
		}

		.mask p {
			color: #fff;
			text-align: center;
		}

		#file0{
			position: absolute;
			width: 100%;
			height: 100%;
			opacity: 0;
			z-index: 300;
		}
	</style>
</block>
