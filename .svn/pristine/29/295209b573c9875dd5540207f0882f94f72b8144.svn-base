		<script>
		
			function imgPreview(fileDom) {
				//判断是否支持FileReader
				if (window.FileReader) {
					var reader = new FileReader();
				} else {
					alert("您的设备不支持图片预览功能，如需该功能请升级您的设备！");
				}
				//获取文件
				var file = fileDom.files[0];
				// console.log();return;
				var imageType = /^image\//;
				//是否是图片
				if (!imageType.test(file.type)) {
					alert("请选择图片！");
					return;
				}
				//读取完成
				reader.readAsDataURL(file);
				reader.onload = function (e) {
					//获取图片dom
					var img = document.getElementById("img0");
					var bgc = document.getElementById("bgc");
				
					var img =  e.target.result;
					var id = '{$id}';

					$.ajax({
						//几个参数需要注意一下
						type: "POST", //方法类型
						dataType: "json", //预期服务器返回的数据类型
						url: "index.php?s=/Api/IndexApi/uploads_img", //url 
						data: {
							"id": id,
							"img": img,
							"start_name": "photo"
						},
						beforeSend: function () {
							$(".mask").show();
						},
						success: function (result) {
							$(".mask").hide();
							if (result.ResultType == 0) {
								$("#bgc").attr('src', result.AppendData);
								$("#img0").attr("src",result.AppendData);
							}
						},
						error: function () {
							$(".mask").hide();
							alert("服务器繁忙，请稍后再试！");
						}
					})
				};


			}

			$(function () {
				var pid = '{$pid}';
				var tid = '{$tid}';
				var id = '{$id}';
				$.ajax({
					//几个参数需要注意一下
					type: "POST", //方法类型
					dataType: "json", //预期服务器返回的数据类型
					url: "index.php?s=/Api/IndexApi/get_album_list", //url 
					data: {
						"id": id,
						"my_id": tid
					},
					success: function (result) {
						if (result.ResultType == 0) {
							$.each(result.AppendData.content_detail, function (idx, item) {
								if (item.id == pid) {
									var w = $("#bgc").width();
									var h = $("#bgc").height();
									var w2 = $("#div2").width();
									var h2 = $("#div2").height();
									var winh = document.body.clientHeight;
									var winw = document.body.offsetWidth;
									var flag = false;
									var div2 = document.getElementById("div2");
									var cur = {
										x: 0,
										y: 0
									}
									var nx, ny, dx, dy, x, y;

									function down() {
										flag = true;
										var touch;
										if (event.touches) {
											touch = event.touches[0];
										} else {
											touch = event;
										}
										cur.x = touch.clientX;
										cur.y = touch.clientY;
										dx = div2.offsetLeft;
										dy = div2.offsetTop;
									}

									function move() {
										if (flag) {
											var touch;
											if (event.touches) {
												touch = event.touches[0];
											} else {
												touch = event;
											}
											nx = touch.clientX - cur.x;
											ny = touch.clientY - cur.y;
											x = dx + nx;
											y = dy + ny;
											if (x < 0 || y < 0 || x > (w - w2) || y > (h - h2)) {
												return false;
											}
											div2.style.left = x + "px";
											div2.style.top = y + "px";

											//阻止页面的滑动默认事件
											// document.addEventListener("touchmove", function (event) {
											// 	console.log(event.target.id)
											// 	if (event.target.id == "Img") {
											// 		event.preventDefault();
											// 	}
											// }, false);
										}

									}

									$('#Img').on('touchstart', function (e) {
										e.preventDefault();

										down();

									});
									$('#Img').on('touchmove', function () {

										move();
									});

									// $("#bgcs").attr('src',item.img);
									$(".clur").html(item.content);
									$(".clur").css("color", item.font_color);
									$("#bgc").attr('src', item.img);
									// $("#Img").attr('src',item.img);
									$("#img0").attr('src', item.img);
									$("#sorts").val(item.sort);
									// alert(item.sort);
								}
								// alert(item.font_color);
							});

						}
					},
					error: function () {
						alert("服务器繁忙，请稍后再试！");
					}
				});

			});
		</script>
