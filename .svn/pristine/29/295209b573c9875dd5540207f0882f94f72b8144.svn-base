		<script>
			var k = ($("body").width()) * 0.7;
			//			console.log(k);
			//			console.log(g);
			$("#div2").css("width", k);

			function yulan() {
				var tid = '{$tid}';
				var cids = '{$cids}';
				// alert(tid);
				// window.location.href="__ROOT__/index.php?s=/Home/Photo/show/id/"+tid+"/pid/"+pid+"";
				window.location.href = "__ROOT__/index.php?s=/Home/Photo/show/id/" + tid + "/cids/" + cids;
			}
		</script>
		<script>
			var w = $("body").width() * 0.96;
			var h = $("body").height() * 1.5;
			var w2 = $("#div2").width();
			var h2 = $("#div2").height();
			//			console.log(w);
			//			console.log(h);
			//			console.log(w2);
			//			console.log(h2);
			//			var winh = document.body.clientHeight;
			//			var winw = document.body.offsetWidth;
			var flag = false;
			var div2 = document.getElementById("div2");
			var cur = {
				x: 0,
				y: 0
			}
			var nx, ny, dx, dy, x, y;

			function down() {
				flag = true;
				var touch;
				if (event.touches) {
					touch = event.touches[0];
				} else {
					touch = event;
				}
				cur.x = touch.clientX;
				cur.y = touch.clientY;
				dx = div2.offsetLeft;
				dy = div2.offsetTop;
			}

			function move() {
				if (flag) {
					var touch;
					if (event.touches) {
						touch = event.touches[0];
					} else {
						touch = event;
					}
					nx = touch.clientX - cur.x;
					ny = touch.clientY - cur.y;
					x = dx + nx;
					y = dy + ny;
					if (x < 0 || y < 0 || x > (w - w2) || y > (h - h2)) {
						return false;
					}
					div2.style.left = x + "px";
					div2.style.top = y + "px";
					//					console.log(div2.style.left);

					//阻止页面的滑动默认事件
					// document.addEventListener("touchmove", function (event) {
					// 	console.log(event.target.id)
					// 	if (event.target.id == "Img") {
					// 		event.preventDefault();
					// 	}
					// }, false);
				}

			}

			$('#Img').on('touchstart', function (e) {
				e.preventDefault();

				down();

			});
			$('#Img').on('touchmove', function () {

				move();
			});
			// div2.addEventListener("touchstart", function() {
			// 	down();
			// }, false);

			// div2.addEventListener("touchmove", function() {
			// 	move();
			// }, false);
		</script>
		<script>
			// $('.tab').find('li').click(function() {
			// 	var index = $(this).index();
			// 	$(this).addClass('active').siblings().removeClass('active');
			// 	$('.content>li').eq(index).show().siblings().hide();
			// })

			$('.tab').find('li').click(function () {
				var index = $(this).index();
				$(this).addClass('active').siblings().removeClass('active');
				var pid = '{$pid}';
				var tid = '{$tid}';
				var id = '{$id}';
				var url = $("#img0").attr('src');
				var strReg = '^((https|http|ftp|rtsp|mms)?://)';
				var re = new RegExp(strReg);
				if (!re.test(url)) {
					var id = '{$id}';
					$.ajax({
						//几个参数需要注意一下
						type: "POST", //方法类型
						dataType: "json", //预期服务器返回的数据类型
						url: "index.php?s=/Api/IndexApi/uploads_img", //url 
						data: {
							"id": id,
							"img": url,
							"start_name": "photo"
						},
						success: function (result) {
							if (result.ResultType == 0) {
								// alert('ok');
								$("#img0").attr('src', result.AppendData);
							}
						},
						error: function () {
							alert("服务器繁忙，请稍后再试！");
						}
					})
					// return false;  
				}
				// else {  

				//     // return true;  
				// }  

				// alert();
				$.ajax({
					//几个参数需要注意一下
					type: "POST", //方法类型
					dataType: "json", //预期服务器返回的数据类型
					url: "index.php?s=/Api/IndexApi/get_album_list", //url 
					data: {
						"id": id,
						"my_id": tid
