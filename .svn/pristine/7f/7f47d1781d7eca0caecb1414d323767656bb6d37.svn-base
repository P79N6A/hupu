<extend name="./base" />

<block name="css_extend">

</block>
<block name="body">

	<body>
		<style type="text/css">
			.zzc_myruanwen_from_input {
				height: auto;
			}
		</style>
		<script src="js/mui.min.js"></script>
		<script type="text/javascript">
			mui.init()
		</script>
		<header class="mui-bar mui-bar-nav zzc_header">
			<a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left zzc_header_fan">返回</a>
			<h1 class="mui-title zzc_header_title">创建商会</h1>
			<span class="mui-icon mui-icon-more zzc_right"></span>
		</header>
		<div class="mui-content">
			<ul class="mui-table-view  mui-table-view-chevron" style="margin: 0 auto;">
				<li class="mui-table-view-cell">
					<a href="#about" class="mui-navigate-right zzc_tixianjilu" style="line-height: 60px;">商会标志 <span class="zzc_photo"></span></a>
				</li>
				<li class="mui-table-view-cell">
					<a href="#about" class="mui-navigate-right zzc_tixianjilu">商会地区<span class="mui-pull-right  zzc_liushui_li_span" style="color:#333333">上海-上海市</span></a>
				</li>
				<li class="mui-table-view-cell">
					<a href="#about" class="mui-navigate-right zzc_tixianjilu">商会名称<span class="mui-pull-right  ">一位三十商会</span></a>
				</li>
			</ul>
			<ul class="mui-table-view  mui-table-view-chevron">
				<li class="mui-table-view-cell">
					<a href="#about" class="mui-navigate-right zzc_tixianjilu">商会介绍<span class="mui-icon mui-icon-image zzc_right zzc_ico_phone"></span></a>
				</li>
			</ul>
			<textarea id='question' class="mui-input-clear question zzc_guanggao_edittextarea" placeholder="请详细描述你的问题和意见..."></textarea>

			<div class="myguanggao_bottom">
				<input type="" name="" id="" value="确定" />
			</div>
		</div>
	</body>

</block>

<block name="js_extend">
	<script src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js" type="text/javascript"></script>
	<script type="text/javascript">
		document.addEventListener('WeixinJSBridgeReady', function onBridgeReady() {
			// 通过下面这个API隐藏右上角按钮hideOptionMenu
			WeixinJSBridge.call('hideOptionMenu');
		});
	</script>
</block>