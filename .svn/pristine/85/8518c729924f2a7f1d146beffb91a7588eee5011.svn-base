<extend name="./base" />

<block name="css_extend">
	<script src="__HOME_JS__/rem.js"></script>
	<style>
		.zzc_tab {
			width: 100%;
			height: 2.5rem;
			line-height: 2.5rem;
			padding: 0;
			background: #fff;
			box-shadow: 0 0.1rem 0.25rem rgba(0, 0, 0, 0.08);
			margin-bottom: 0.25rem;
			overflow: hidden;
		}
		
		.zzc_tab>a {
			display: block !important;
			width: 33.3% !important;
			height: 100% !important;
			line-height: 2.5rem !important;
			float: left;
			border-radius: none !important;
			font-size: 0.75rem !important;
			position: relative;
			border: none;
		}
		
		.mui-active {
			display: block;
			width: 100%;
			height: 50px;
		}
		
		.mui-media-body {
			font-size: 0.65rem;
		}
		
		.mui-ellipsis {
			font-size: 0.5rem;
		}
		
		.mui-media {
			width: 100%;
			height: 90px;
		}
		
		.change {
			padding: 0px !important;
			margin: 0 !important;
			height: 45px;
		}
		
		.pass {
			width: 100%;
			height: 20px;
			padding: 0 !important;
			margin: 0 !important;
		}
		
		.mui-segmented-control.mui-segmented-control-inverted .mui-control-item {
			color: #666;
			border: 0;
		}
		
		.mui-active {
			color: #2FB3D3 !important;
			border:none !important;
		}
		
		.on {
			display: block;
			width: 25%;
			height: 1.5px;
			background: #2FB3D3;
			bottom: 0px;
			left: 50%;
			margin-left: -12.5%;
			position: absolute;
		}
	</style>
</block>

<block name="body">

	<body class="zzc_body_bg">
		<div class="mui-content zzc_mui_content_bg">
			<div class="mui-slider-indicator mui-segmented-control mui-segmented-control-inverted zzc_tab">
				<a href="{:U('Home/Cardwallet/exchange?type=mine')}" class="mui-control-item zzc_taba <if condition=" I( 'get.type')=='mine' "> mui-active</if>">
					收到的申请
					<if condition=" I( 'get.type')=='mine' "><span class="on"></span></if>
				</a>
				<a href="{:U('Home/Cardwallet/exchange?type=apply')}" class="mui-control-item zzc_taba  <if condition=" I( 'get.type')=='apply' "> mui-active</if>">
					我的交换申请
					<if condition=" I( 'get.type')=='apply' "><span class="on"></span></if>

				</a>
				<a href="{:U('Home/Cardwallet/exchange?type=success')}" class="mui-control-item zzc_taba  <if condition=" I( 'get.type')=='success' "> mui-active</if>">
					交换成功
					<if condition=" I( 'get.type')=='success' "><span class="on"></span></if>
				</a>
			</div>
			<ul class="mui-table-view">
				<foreach name="result" item="vo">
					<li class="mui-table-view-cell mui-media">
						<a class="change" href="{:U('Home/Nologin/card_jump/id/'.$vo['user_info']['id'])}">
							<img class="mui-media-object mui-pull-left" style="border-radius: 50%;width: 42px;" src="{$vo.user_info.headimg}">
							<div class="mui-media-body">
								<if condition="I('get.type') == 'mine'">
									{$vo.user_info.nick_name}想与我交换V网
									<else/> {$vo.user_info.nick_name}
								</if>
								<p class='mui-ellipsis'>{$vo.user_info.company}</p>
							</div>
						</a>
						<a class="pass" href="{:U('Home/Cardwallet/exchangeInfo?id='.$vo['id'])}">
							<span class="mui-badge"><if condition="$vo.status eq 1">已通过<elseif condition="$vo.status eq 2"/>待审核<else />不通过</if></span>
						</a>
					</li>
				</foreach>
			</ul>

		</div>
	</body>
</block>

<block name="js_extend">
	<script>
		$(function() {
			$('a').on('touchstart', function() {
				var href = $(this).attr('href');
				top.location.href = href;
			});
		});
		var isPageHide = false;
		window.addEventListener('pageshow', function() {
			if(isPageHide) {
				window.location.reload();
			}
		});
		window.addEventListener('pagehide', function() {
			isPageHide = true;
		});
	</script>
	<script src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js" type="text/javascript"></script>
	<script type="text/javascript">
		document.addEventListener('WeixinJSBridgeReady', function onBridgeReady() {
			// 通过下面这个API隐藏右上角按钮hideOptionMenu
			WeixinJSBridge.call('hideOptionMenu');
		});
	</script>
</block>