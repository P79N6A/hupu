<extend  name="./base"/>

<block name="css_extend">
    <style>
    iframe{height: 100%;width: 100%;position: absolute;}
    </style>
</block>
<block name="body">
    <body class="zzc_body_bg">
    <iframe src="{:url('Home/Nologin/card_jump/id/'.I('get.id'))}" frameborder="0">
        
    </iframe>
    <div class="zzc_myranwen_bottom" style="height:55px">
        <input type="hidden" name="music_id" value="{$data.music_id}">
        <input type="button" name="预览" id="canel"  value="取消" style="background:#fff!important;height:55px" class="zzc_myruanwen_bottom_button" />
        <input type="button" style="height:55px" name="保存" id="save" value="复制V网" class="zzc_myruanwen_bottom_button zzc_blue_bg"  />
    </div>
    </body>
</block>

<block name="js_extend">
    <script src="__HOME_CSS__/bs3/sea.js"></script>
    <script src="https://g.alicdn.com/bui/bui/1.1.21/config.js"></script>
    <script type="text/javascript" src="http://api.map.baidu.com/api?key=&v=1.1&services=true"></script>
    <script type="text/javascript">
        $(function(){
            $('#canel').on('touchend',function(){
                javascript:history.go(-1);
            });
            $('#save').on('touchend',function(){
                mui.confirm("是否要复制V网","",["否","是"],function(res){
                    if(res.index==1){
                        var user_id={$Think.get.id};
                        $.post("{:url('Home/Card/copyCard')}",{'user_id':user_id},function(res){
                            mui.toast("复制成功");
                            setTimeout(function(){
                                top.location.href="{:url('Home/User/usercenter')}";
                            },1500);
                        });
                    }
                })
            });
        })
    </script>
    <script src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js" type="text/javascript"></script>
	<script type="text/javascript">
		document.addEventListener('WeixinJSBridgeReady', function onBridgeReady() {
			// 通过下面这个API隐藏右上角按钮hideOptionMenu
			WeixinJSBridge.call('hideOptionMenu');
		});
	</script>
</block>