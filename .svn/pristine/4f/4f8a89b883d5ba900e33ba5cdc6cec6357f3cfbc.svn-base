<block name="js_extend">
	<script type="text/javascript" src="__HOME_JS__/jquery.cxcolor.js"></script>
	<script src="__HOME_CSS__/bs3/sea.js"></script>
	<script src="https://g.alicdn.com/bui/bui/1.1.21/config.js"></script>
	<script type="text/javascript" src="http://api.map.baidu.com/api?key=&v=1.1&services=true"></script>
	<script type="text/javascript">
		$("#yulan,#save,#music").on('touchend', function() {
			var id = $(this).attr('id');
			var jump_url = ""; //提交完成跳转的地址
			switch(id) {
				case 'music':
					jump_url = "{:U('Home/Card/musicCard')}";
					break;
				case 'yulan':
					//预览
					jump_url = "{:U('Home/Nologin/card_jump/id/'.$userInfo['id'])}";
					break;
				case 'save':
					//保存
					break;

			}
			$('input[name=jump_url]').val(jump_url);
			$('#form').submit();
		});
		$('.zzc_gfsgas_div').on('touchend', function() {
			var type = $(this).find('span').attr('data-type');
			$('.zzc_gfsgas_div .zzc_gfsgas_span').removeClass('on').html("立即使用");
			$(this).find('.zzc_gfsgas_span').addClass('on').html("正在使用");
			$("input[name=style]").val(type);
		});
		
		$('.zzc_gfsga_div').on('click', function() {		
			$('.allcity-masks').show();
			$(".privacy").show();
			setTimeout(function() {
				$('.privacy').hide();
				$('.allcity-masks').hide();
			}, 1500);
	
		});
		
		/* 颜色选择器--背景、字体颜色     */
		$("#color_bg").cxColor();
		(function() {
			var color = $("#color_bg");
			color.css("background", color.attr('value'));
			color.bind("change", function() {
				$('.zzc_afhafj_bottom input[name=background_color]').val(this.value);
				color.css("background", this.value);
			});

		})();
		$("#color_text").cxColor();
		(function() {
			var color = $("#color_text");
			color.css("background", color.attr('value'));
			color.bind("change", function() {
				$('.zzc_afhafj_bottom input[name=text_color]').val(this.value);
				color.css("background", this.value);
			});
		})();
		$("#color_title").cxColor();
		(function() {
			var color = $("#color_title");
			color.css("background", color.attr('value'));
			color.bind("change", function() {
				$('.zzc_afhafj_bottom input[name=title_color]').val(this.value);
				color.css("background", this.value);
			});
		})();
		$("#color_link").cxColor();
		(function() {
			var color = $("#color_link");
			color.css("background", color.attr('value'));
			color.bind("change", function() {
				$('.zzc_afhafj_bottom input[name=link_color]').val(this.value);
				color.css("background", this.value);
			});
		})();
	</script>
	<script src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js" type="text/javascript"></script>
	<script type="text/javascript">
		document.addEventListener('WeixinJSBridgeReady', function onBridgeReady() {
			// 通过下面这个API隐藏右上角按钮hideOptionMenu
			WeixinJSBridge.call('hideOptionMenu');
		});
	</script>
</block>