        }

        .changeli {
            font-size: .16rem !important;
            font-family: PingFangSC-Medium !important;
            font-weight: 500 !important;
            color: #32CEA0 !important;
            line-height: .33rem !important;
            text-align: center !important;
        }

        .on {
            width: .32rem;
            height: .02rem;
            background: #32CEA0;
            border-radius: .01rem;
            position: absolute;
            bottom: 0;
            left: .5rem;
            display: none;
        }

        .receive {
            /* display: none; */
        }

        .application {
            display: none;
        }

        .success {
            display: none;
        }

        .loading {
            width: 7.5rem;
            height: 4.5rem;
            background: rgba(0, 0, 0, 0.6);
            text-align: center;
            font-size: 0.8rem;
            position: fixed;
