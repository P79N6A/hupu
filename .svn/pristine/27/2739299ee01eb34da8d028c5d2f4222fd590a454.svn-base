</head>

<body>
    <div class="conent">
        <div class="extitlt">
            <ul class="extop">
                <li class="onen changeli" data-type="mine">收到的申请
                    <span class="on"></span>
                </li>
                <li class="two" data-type="apply">我的交换申请
                    <span class="on "></span>
                </li>
                <li class="three" data-type="success">交换成功
                    <span class="on"></span>
                </li>
            </ul>
        </div>
        <!--<div class="qs">-->
            <!--<p>我是有底线的哟</p>-->
        <!--</div>-->
        <div class="receive">
        </div>
    </div>
</body>
<script>
    $(function () {

        var user_id = '{$unionid}';
        var typemsg = 'mine';
        var index = 1;

        var objList=[];
        function render(type, index) {
            console.log(type);
            $.ajax({
                type: 'post',
                url: '/index.php?s=/Api/Friend/GetCardExchangeList',
                data: {
                    unionid: user_id,
                    type: type,
                    current_page_number: index,
                    page_size: 10,
                },
                success: function (res) {
                    console.log(res)
                    var data = res.AppendData;
                    if (type == 'mine') {
                        scrollFlag = true;
                        var list = '';
                        if (data == null) {
                            scrollFlag = false;
                            //$(".qs").text("我是有底线的哟").stop(true).fadeIn(1000).fadeOut(2000);
                            return false;
                        }
                        objList=data;
                        $.each(data, function (k, v) {
                            var time = timestampToTime(v.add_time);
                            var status = v.status;
                            var agree = '已拒绝';
                            if (status == 1) {
                                agree = '已同意';

                            } else if (status == 2) {
                                agree = '同意';

                            }

                            list += '<div class="top">'
                            list += '<img src="' + v.user_info.headimg + '" alt="">'
                            list += '<span class="one">' + v.user_info.nick_name +
                                '</span>'
                            list += '<span class="masg">' + v.msg + '</span>'
                            list += '<div class="secd">' + v.add_time_xcx + '</div>'
                            if (status == 1) {
                                list += '<div class="agree " style="background:#E2E2E2">' + agree + '</div>'
                            } else if (status == 2) {
                                list += '<div class="agree myclick" style="background:#32cea0" data-id="' + v.id + '">' +agree + '</div>'
                            }else{
                                list += '<div class="agree " style="background:#E2E2E2">' + agree + '</div>'
                            }

                            list += '</div>'
                        })

                        if (index == 1) {
                            $('.receive').html(list)
                        } else {
                            $('.receive').append(list)
                        }
                    }

                    if (type == 'apply') {
                        var lost = '';
                        scrollFlag = true;
                        if (data == null) {
                            scrollFlag = false;
                            // console.log('没有数据了')
                           // $(".qs").text("我是有底线的哟").stop(true).fadeIn(1000).fadeOut(2000);
                            return false;
                        }
                        $.each(data, function (k, v) {
                            var status = v.status;
                            var agree = '未同意';
                            if (status == 1) {
                                agree = '已同意';
                            } else if (status == 2) {
                                agree = '待审核';
                            }

                            lost += '<div class="top">'
                            lost += '<img src="' + v.user_info.headimg + '" alt="">'
                            lost += '<span class="one">' + v.user_info.nick_name +
                                '</span>'
                            lost +=
                                '<span class="masg">' + v.msg + '</span>'
                            lost += '<div class="secd">' + v.add_time_xcx + '</div>'
                            if (status == 1) {
                                lost += '<div class="agree" style="background:#E2E2E2">' +agree + '</div>'
                            } else if (status == 2) {
                                lost += '<div class="agree" style="background:#32cea0">' +agree + '</div>'
                            }
                            lost += '</div>'
                        })

                        if (index == 1) {
                            objList=data;
                            $('.receive').html(lost)
                            console.log('渲染')
                        } else {
                            $.each(data, function (k, v) {
                                objList.push(v)
                            })
                            $('.receive').append(lost)
                            console.log('追加')
                        }

                    }

                    if (type == 'success') {
                        var lost = '';
                        scrollFlag = true;
                        if (data == null) {
                            scrollFlag = false;
                            // console.log('没有数据了')
                          //  $(".qs").text("我是有底线的哟").stop(true).fadeIn(1000).fadeOut(2000);
                            return false;
                        }

                        $.each(data, function (k, v) {
                            var status = v.status;
                            var agree = '未同意';
                            if (status == 1) {
                                agree = '已同意';
                            } else if (status == 2) {
                                agree = '待审核';
                            }

                            lost += '<div class="top">'
                            lost += '<img src="' + v.user_info.headimg + '" alt="">'
                            lost += '<span class="one">' + v.user_info.nick_name +
                                '</span>'
                            lost +=
                                '<span class="masg">' + v.msg + '</span>'
                            lost += '<div class="secd">' + v.add_time_xcx + '</div>'
                            if (status == 1) {
                                lost += '<div class="agree" style="background:#E2E2E2">' +agree + '</div>'
                            } else if (status == 2) {
                                lost += '<div class="agree" style="background:#32cea0">' +agree + '</div>'
                            }
                            lost += '</div>'

                        })
                        if (index == 1) {
                            objList=data;
                            $('.receive').html(lost)
                            console.log('渲染')
                        } else {
                            $.each(data, function (k, v) {
                                objList.push(v)
                            })
                            $('.receive').append(lost)
                            console.log('追加')
                        }

                        // if (index == 1) {
                        //     $('.receive').html(lost)
                        //     console.log('渲染')
                        // } else {
                        //     $('.receive').append(lost)
                        //     console.log('追加')
                        // }
                    }
                }
            })
        }


        function timestampToTime(timestamp) {
            var date = new Date(timestamp * 1000); //时间戳为10位需*1000，时间戳为13位的话不需乘1000
            var Y = date.getFullYear() + '年';
            var M = (date.getMonth() + 1 < 10 ? '0' + (date.getMonth() + 1) :
                date.getMonth() + 1) + '月';
            var D = (date.getDate() < 10 ? '0' + date.getDate() + ' ' : date.getDate() +
                '日');
            var h = (date.getHours() < 10 ? '0' + date.getHours() + ':' : date.getHours() +
                ':');
            var m = (date.getMinutes() < 10 ? '0' + date.getMinutes() + ':' :
                date.getMinutes() + ':');
            var s = date.getSeconds();
            return Y + M + D + h + m + s;
        }

        render(typemsg, index)


        $('.extop li').click(function () {
            var atypemsg = $(this).attr('data-type');
            if(atypemsg==typemsg){
                return;
            }
            $(this).addClass("changeli").siblings().removeClass("changeli");
            $(this).parent().parent().next().css('display', 'block');
            index = 1;
            scrollFlag = true;
            typemsg= $(this).attr('data-type');
            render(typemsg, index);
        })
        // 横线
        $('.extop li span').click(function () {
            $(this).addClass("changeli").siblings().removeClass("changeli");
        });
        // 点击同意切换已同意
        $("body").on('click', '.agree.myclick', function () {
            // $("#btn").attr("disabled", true);
            var $agree = $(this);
            var data_id=$agree.attr("data-id");
                //id: this.data.infos[this.data.changeIdIndex].id, status: '同意'
            console.log(1)
            if(confirm("是否同意")){
                $.ajax({
                    url:"/index.php?s=/Api/Friend/ValidateExchange",
                    type:"post",
                    data:{
                        unionid:user_id,
                        id:data_id,
                        status:'同意'
                    },

                    success:function(res){
                        console.log(res)
                        if(res.ResultType==0){
                            var $others = $agree.siblings();
                            if ($agree.hasClass('agree')) {
                                $agree.removeClass('agree').addClass('notagree').html('已同意');
                            } else if ($agree.hasClass('agree')) {
                                $agree.removeClass('notagree').addClass('agree').html('待审核');
                            } else {
                                $agree.addClass('agree').removeClass('notagree').html('同意');
                            }
                        }else{


                        }
                    },
                    error:function () {
                    }
                })
            }



        });
        // 页面初始化数据


        // 收到的申请 mine   我的交换申请 apply   成功交换 success


        var scrollFlag = true;
        $(window).scroll(function () {
            //已经滚动到上面的页面高度
            var scrollTop = $(this).scrollTop();
            //页面高度
            var scrollHeight = $(document).height();
            //浏览器窗口高度
            var windowHeight = $(this).height();
            if (!scrollFlag) {
                return false;
            }
            if (scrollTop + windowHeight == scrollHeight) {
                console.log('到底了')
                scrollFlag = false;
                index += 1;
                console.log(index)
                render(typemsg, index)
            }
        })
    })
</script>

</html>