            display: none;
        }

        .qs {
            width: 50%;
            height: 1rem;
            font-size: .14rem;
            color: #fff;
            text-align: center;
            line-height: 1rem;
            background: #a3a2a2;
            position: absolute;
            top: 50%;
            left: 25%;
