<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="/Public/Home/js/whjs/js/jquery-1.8.3.min.js"></script>
    <script src="/Public/Home/js/whjs/js/newrem.js"></script>
    <link rel="stylesheet" href="/Public/Home/css/wh/base.css">
    <title>节日贺卡</title>
    <style>
        body,html{
            padding-top: .5rem;
        }
        .divs{
                position: relative;
                width: 100%;
                height: 100%;
        }
        .header {
            width: 100%;
            height: .5rem;
            border-bottom: 1px solid #f6f6f6;
            position: fixed;
            top: 0;
            z-index: 1;
            background: #fff;
           
        }

        .header .content {
            width: 80%;
            height: 100%;
            padding: 0 .1rem 0 .1rem;
            box-sizing: border-box;
            white-space: nowrap;
            overflow-x: scroll;
            overflow-y: hidden;
        }

        .header .item {
            display: inline-block;
            height: 100%;
            padding: 0 .08rem;
            line-height: .5rem;
            position: relative;
            color: #777777;
            font-size: .13rem;
            text-align: center;
        }

        .header .item .line {
            width: .32rem;
            height: .03rem;
            background: #32CEA0;
            position: absolute;
            bottom: 0rem;
            left: 50%;
            margin-left: -.16rem;
            display: none;
        }

        .active {
            color: #32CEA0 !important;
            font-size: .16rem !important;
        }

        .header .opton {
            width: .75rem;
            height: .5rem;
            position: absolute;
            right: 0;
            top: 0;
            box-shadow: -2px 0px 2px 0px rgba(225, 225, 225, 0.5);
        }

        .header .opton .bg {
            width: 100%;
            height: .4rem;
            margin-top: .05rem;
            background: #F8C85E;
            border-top-left-radius: .2rem;
            border-bottom-left-radius: .2rem;
            font-size: .14rem;
            position: relative;
        }

        .opton .bg span {
            position: absolute;
            top: 50%;
            left: .16rem;
            margin-top: -.1rem;
            color: #fff;
        }

        .opton .bg .sx {
            width: .14rem;
            height: .14rem;
            position: absolute;
            top: 50%;
            right: .12rem;
            margin-top: -0.07rem;
        }

        .main {
            width: 100%;
            margin-top: .12rem;
        }

        .main .list {
            width: 100%;
            display: flex;
            flex-wrap: wrap;

        }

        .main .list li {
            width: 1.2rem;
            margin-right: 0.05rem;
            margin-bottom: .1rem;

        }

        .main .list li a img {
            width: 100%;
            height: 1.8rem;
            vertical-align: top;
        }

        .main .list li a {
            display: block;
            width: 100%;
            height: 100%;
        }

        .main .list li a .title {
            width: 100%;
            height: .3rem;
            padding: .05rem .05rem;
            box-sizing: border-box;

        }

        .list li a .title p {
            font-size: .16rem;
        }

        .list li a .title span {
            font-size: .12rem;
            color: #fff;
            background: #32CEA0;
            padding: .01rem .05rem;
            margin-left: .05rem;
            border-radius: .02rem;
            margin-top: .03rem;

        }

        .chose_jr {
            width: 100%;
            background: #fff;
            position: fixed;
            bottom: 0;
            z-index: 1000;
            border-radius: 6px 6px 0px 0px;
            display: none;
        }

        .chose_jr p {
            width: 100%;
            text-align: center;
            font-size: .16rem;
            height: .54rem;
            border-bottom: 1px solid #f6f6f6;
            line-height: .54rem;
        }

        .chose_jr .jrlist {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
        }

        .chose_jr .jrlist li {
            width: .75rem;
            height: .5rem;
            text-align: center;
            line-height: .5rem;
            border-right: 1px solid #f6f6f6;
            box-sizing: border-box;
            border-bottom: 1px solid #f6f6f6;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            font-size: .13rem;
        }

            /* 加载中 */
        .loading {
            width: 100%;
            height: .4rem;
            display: none;

        }

        .loading .load_box {
            width: 100%;
            height: 100%;
            position: relative;
        }

        .load_box img {
            width: .2rem;
            height: .2rem;
            position: absolute;
            top: 50%;
            margin-top: -.1rem;
            margin-left: -.1rem;
            left: 40%;
        }

        .load_box p {
            font-size: .16rem;
            height: .2rem;
            width: .6rem;
            position: absolute;
            top: 50%;
            margin-top: -0.1rem;
            left: 50%;
            margin-left: -0.1rem;

        }
		.me{
			width:0.7rem;
			height:0.7rem;
			background:rgba(50,206,160,1);
			box-shadow:0px 2px 6px 0px rgba(50,206,160,1);
			position: fixed;
			bottom:0.6rem;
			right:0.2rem;
			font-size: 0.2rem;
			color:#fff;
			text-align: center;
			line-height:0.7rem;
			border-radius: 50%;
		}
		.me>a{
			display: block;
			width: 100%;
			height:100%;
			font-size: 0.2rem;
			color:#fff;
		}




    </style>
</head>

<body>
    <div class="header">
            <div class="divs">
                <div class="content">
                    <!-- 节日分类信息 -->
                </div>
                <!-- 选项 -->
                <div class="opton">
                    <div class="bg">
                        <span>筛选</span>
                        <img class="sx" src="/Public/Home/images/wh/screencopy@2x.png" alt="">
                    </div>
                </div>
            </div>
    </div>
    <div class="main">
        <ul class="list">
            <!-- 海报秀的数据 -->
            <!-- <li>
                <a href="javascript:;">
                    <img src="/Public/Home/images/wh/Template2@2x.png" alt="">
                    <div class="title">
                        <p class="fl">热情嬉闹</p>
                        <span class="fl">免费</span>
                    </div>
                </a>
            </li> -->

        </ul>
        <div class="loading">
            <div class="load_box">
                <img src="/Public/Home/images/loadad.gif" alt="">
                <p>加载中...</p>
            </div>
        </div>
    </div>
    <!-- 选项框 -->
    <div class="mask"></div>
    <div class="chose_jr">
        <p>选择节日</p>
        <ul class="jrlist">
            <!-- 选择节日的 -->
        </ul>
    </div>
	<div class="me"><a href="/index.php?s=/Home/Selecttemplate/all_template&type=4">我的</a></div>
</body>

</html>
<script>
    $(function () {
        var id = '{$id}';
        $.ajax({ //分类节日
            type: 'post',
            url: '/index.php?s=/Api/IndexApi/gcard_type',
            data: {
                id: id
            },
            success: function (res) {
                // console.log(res)
                callback(res)
                var data = res.AppendData;
                if (res.ResultType == 0) {
                    var list = '';
                    var model_list = '';
                    $.each(data, function (k, v) {
                        if (k == 0) {
                            list += '<div class="item active" data-id="' + v.id + '">' + v.name +
                                ''
                            list += '<div class="line" style="display:block"></div>'
                        } else {
                            list += '<div class="item " data-id="' + v.id + '">' + v.name +
                                ''
                            list += '<div class="line"></div>'
                        }
                        list += '</div>'
                        model_list += '<li data-jrid="' + v.id + '">' + v.name + '</li>'
                    })
                    $('.jrlist').html(model_list)
                    $('.content').html(list)
                }
            }
        })

        function callback(res) {
            console.log(res)
            var default_id = res.AppendData[0].id;
            Get_poster(default_id)
        }

        $('.header').on('click', '.item', function () {
            $(this).addClass('active').siblings().removeClass('active').end().find('.line').css(
                'display', 'block').parents().siblings().find('.line').css('display', 'none');
            var get_type_id = $(this).attr('data-id');
            Get_poster(get_type_id)

        })

        var tips = $('.mask');
        var jrmodel = $('.chose_jr')
        $('.opton').on('click', function () {
            tips.show();
            jrmodel.show();
        })
        tips.on('click', function () {
            tips.hide();
            jrmodel.hide();
        })

        $('.jrlist').on('click', 'li', function () {
            var get_id = $(this).attr('data-jrid');
            Get_poster(get_id);
            $('.content .item').each(function(i,e){
                if($(e).attr('data-id') == get_id){
                    $(this).addClass('active').find('.line').show().parent().siblings().removeClass('active').find('.line').hide()
                }
            })
            tips.hide();
            $('.chose_jr').hide();
        })


        function Get_poster(getto) {
            $.ajax({
                url: '/index.php?s=/Api/IndexApi/gcard',
                type: 'post',
                data: {
                    id: id,
                    type: getto
                },
                beforeSend:function(){
                    $('.loading').show()
                },
                success: function (res) {
                    // console.log(res)
                     $('.loading').hide()
                    var data = res.AppendData;
                    if (res.ResultType == 0) {
                        var poster = '';
                        $.each(data, function (k, v) {
                            poster += '<li data-id="' + v.id + '">'
                            poster += '<a href="javascript:;">'
                            poster += '<img src="' + v.pic + '" alt="">'
                            poster += '</a>'
                            poster += '</li>'


                        })

                        $('.list').html(poster);
                    }
                },
                error:function(){
                     $('.loading').hide()
                }
            })
        }

      
        $('.list').on('click', 'li', function () {
            var gid = $(this).attr('data-id');

            $.post('{:U("Home/Greeting/createCard")}', {
                'gcard_id': gid
            }, function (res) {
                if (res.status == 1) {
                    console.log('选定成功')
                    console.log(res.data.id)
                    location.href = "/index.php?s=/Home/Greeting/greet_edit&gid="+res.data.id+"";
                }

            })
        })







    })
</script>
