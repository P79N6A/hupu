            <a class="forgot" href="/index.php?s=/Home/Capital/szpwd.html">忘记密码？</a>
            <button id="con">确定</button>
        </div>
    </div>
    <input type="hidden" id="type" value="">
    <input type="hidden" id="bank_id" value="">

    <!-- js -->
    <script>
        alert('因总部所有人员参加在香港举行的“2018全球移动互联网营销大会暨洋小秘4.0产品发布会”，故12月8日-12月16日的小秘币兑换申请延迟到12月17日统一处理，敬请谅解，望悉知。');
        //点击设置密码跳转
        $('body').height($('body')[0].clientHeight);
        $("#footer .del").on("click", function () {
            $("#footer").hide();
            $(".mask").hide()
        })

        //取消
        $(".cancel").on("click", function () {
            $(".tip_msg").hide();
            $(".mask").hide();
        })


        // 银行卡确定
        $(".confirm").on("click", function () {
            window.location.href = '/index.php?s=/Home/User/usercenter.html';
        })

        // 微信确定
        $(".confrirm").on("click", function () {
            window.location.href = '/index.php?s=/Home/User/binding.html';
        })

        //选择兑换方式
        $(".content").on("click", ".fangs", function () {
            $('.chosetkzz').show();

        })

        // 密码缺省页跳转
        $(".szan").on("click", function () {
            window.location.href = '/index.php?s=/Home/Capital/szpwd.html';
        })

        var user_id = '{$unionid}';
        //进入页面渲染

        $.ajax({
            type: 'post',
            url: "index.php?s=/Api/Wechat/capital_index",
            data: {
                unionid: user_id

            },
            success: function (res) {
                ischeckWechat = 1;
//判断是否设置了密码

                if ( res.ResultType == 1) {
                    $(".tipmoney").text("请先设置您的支付密码！").stop(true).fadeIn(1000).fadeOut(2000);
                    setTimeout(function () {
                        window.location.href = '/index.php?s=/Home/Capital/szpwd.html';
                    }, 3000)
                } 

               
                $(".mac .itrem").attr("check", "1");
                if (res.ResultType == 2) {
                    $(".tipmoney").text(res.AppendData.Message).stop(true).fadeIn(1000).fadeOut(2000);
                    setTimeout(function () {
                        window.location.href = '/index.php?s=/Home/Capital/carry.html';
                    }, 3000)
                } else {

                    if (res.AppendData.wx_headimg == '' && res.AppendData.wx_nickname == '' && res.AppendData
                        .bank_id == '') {
                        $(".tipmoney").text("未绑定微信或银行卡").stop(true).fadeIn(1000).fadeOut(4000);
                        setTimeout(function () {
                            window.location.href = '/index.php?s=/Home/User/usercenter.html';
                        }, 3000)

                    }
                    if (res.AppendData.wx_headimg == '' && res.AppendData.wx_nickname == '') {
                        $('#type').val(2);
                        $('#bank_id').val(res.AppendData.bank_id);
                        $(".fangs .yinh").html(res.AppendData.bank_name + '(' + res.AppendData.number + ')')
                            .css(
                                "text-indent", '0.08rem'); //银行卡卡号填充
                        $(".tstp").html('<img src="' + res.AppendData.img + '" alt="">')
                        $(".fangs .headerimg").attr("src", " ").hide()

                    } else {
                        $('#type').val(1);
                        $(".fangs .yinh").html(res.AppendData.wx_nickname).css("text-indent", "0.5rem"); //微信
                        $(".fangs .headerimg").attr("src", "" + res.AppendData.wx_headimg + "").show()
                        $(".tstp").html('<img src="' + res.AppendData.img + '" alt="">')
                    }

                }

            },
            error: function () {
              //  alert("异常!")
            }
        })


        var bank_id = '';
        //点击选择银行卡
        $('.mac').on('click', '.itrem', function () {
            $(this).attr("check", "1");
            $('#type').val(2);
            ischeckWechat = '';
            $('.chosetkzz').hide();

            var user_id = '{$unionid}';

            $.ajax({
                type: 'post',
                url: "index.php?s=/Api/Wechat/capital_index",
                data: {
                    unionid: user_id,
                },
                success: function (res) {
                    $('#bank_id').val(res.AppendData.bank_id);
                    if (res.AppendData.bank_name == '') {
                        $(".fangs .yinh").html('暂未绑定银行卡').css("text-indent", '0.08rem'); //银行卡卡号填充
                        $(".mask").show();
                        $(".tip_msg").fadeIn(1000).find(".text").text("是否前往我的中心绑定银行卡?");

                    } else {
                        $(".fangs .yinh").html(res.AppendData.bank_name + '(' + res.AppendData.number +
                            ')').css("text-indent", '0.08rem'); //银行卡卡号填充
                        $(".tstp").html('<img src="' + res.AppendData.img + '" alt="">')
                        $(".fangs .headerimg").attr("src", " ").hide()
                    }



                },
                error: function () {
                    //alert("异常!")
                }
            })
        })

        var ischeckWechat = '';
        //点击选择微信
        $('.mac').on('click', '.itemwrx', function () {
            $('#type').val(1);
            ischeckWechat = 1;
            $('#bank_id').val();
            $('.chosetkzz').hide();

            var user_id = '{$unionid}';
            $.ajax({
                type: 'post',
                url: "index.php?s=/Api/Wechat/capital_index",
                data: {
                    unionid: user_id,


                },
                success: function (res) {

                    if (res.AppendData.wx_headimg == '') {
                        $(".fangs .yinh").html('暂未绑定微信号').css("text-indent", '0.08rem'); //银行卡卡号填充
                        $(".mask").show();
                        $(".tip_mssg").fadeIn(1000).find(".text").text("是否需要绑定微信?");

                    } else {
                        $(".fangs .yinh").html(res.AppendData.wx_nickname).css("text-indent",
                            "0.5rem"); //微信
                        $(".fangs .headerimg").attr("src", "" + res.AppendData.wx_headimg + "").show()
                        $(".tstp").html('<img src="' + res.AppendData.img + '" alt="">')
                    }


                },
                error: function () {
                   // alert("异常!")
                }
            })
        })

        $("#con").on("click", function () {
            var Type = $('#type').val();
            if(!bank_id){
                var bank_id = $('#bank_id').val();
            }
            if ($("#textinput").val() == '') {
                $(".tipmoney").text("请输入您的提现密码").stop(true).fadeIn(1000).fadeOut(2000);
                return false;
            }

            if ($("#textinput").val().length != '6') {
                $(".tipmoney").text("请正确输入您的提现密码").stop(true).fadeIn(1000).fadeOut(2000);
                return false;
            }


            var user_id = '{$unionid}';
            var Money = $("#yb").val();



            var pwd = $("#textinput").val();

            $.ajax({
                type: 'post',
                url: "index.php?s=/Api/Wechat/capital_out",
                data: {
                    unionid: user_id,
                    pwd: pwd,
                    type: Type,
                    money: Money,
                    bank_id: bank_id,
                },
                success: function (res) {
                    $("#footer").hide();
                    $(".mask").hide()
                    $("#textinput").val("");
                    

                    if (res.ResultType == 2) {
                        $(".tipmoney").text(res.Message).stop(true).fadeIn(1000).fadeOut(2000);
                    } else {
                        window.location.href = '/index.php?s=/Home/Capital/Auditre.html&type=' +
                            Type + '';
                    }

                },
                error: function () {
                    $("#textinput").val("")
                    $(".mask").hide()
                   // alert("异常!")
                }
            })




        })


        //点击提交弹出输入密码框
        $('.conter').on('click', '.tijiao', function () {

            var money = $("#yb").val() - 0;
            var controller_money = '{$money}';
            var newmoney = controller_money - 0;

            //未选择金额则不跳转
            if (ischeckWechat == 1 && money > 2000) {
                $(".tipmoney").text("微信每日金额最高2000元").stop(true).fadeIn(1000).fadeOut(2000);
                return false;
            }
            if ($(".mac .itrem").attr("check") != 1) {
                $(".tipmoney").text("请点击选择提现方式").stop(true).fadeIn(1000).fadeOut(2000);
                return false;
            }
            if ($("#yb").val() == '') {
                $(".tipmoney").text("请输入提现金额").stop(true).fadeIn(1000).fadeOut(2000);
                return false;
            }
            if (money > newmoney) {
                $(".tipmoney").text("您的小秘币余额不足").stop(true).fadeIn(1000).fadeOut(2000);
                return false;
            }
            if (money % 100 != 0) {
                $(".tipmoney").text("提现金额必须是100的整数倍").stop(true).fadeIn(1000).fadeOut(2000);
                return false;
            }


            // $('.common-part').show();
            $('#footer').show();
            $(".mask").show();

        })

        $(".chosetkzz .closer").on("click", function () {
            $(".chosetkzz").hide();
        })
    </script>
</body>

</html>